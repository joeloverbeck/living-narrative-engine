{
  "$schema": "../data/schemas/trace-config.schema.json",
  "traceAnalysisEnabled": false,
  "actionTracing": {
    "enabled": false,
    "tracedActions": [
      "music:play_phrase_on_instrument"
    ],
    "outputDirectory": "./traces/straddling",
    "verbosity": "verbose",
    "includeComponentData": true,
    "includePrerequisites": true,
    "includeTargets": true,
    "maxTraceFiles": 100,
    "rotationPolicy": "count",
    "outputFormats": [
      "json",
      "text"
    ],
    "textFormatOptions": {
      "enableColors": false,
      "lineWidth": 120,
      "indentSize": 2,
      "sectionSeparator": "=",
      "includeTimestamps": true,
      "performanceSummary": true
    }
  },
  "performanceMonitoring": {
    "enabled": false,
    "thresholds": {
      "slowOperationMs": 100,
      "criticalOperationMs": 500,
      "maxConcurrency": 10,
      "maxTotalDurationMs": 5000,
      "maxErrorRate": 5,
      "maxMemoryUsageMB": 50
    },
    "sampling": {
      "rate": 1.0,
      "strategy": "random",
      "alwaysSampleErrors": true,
      "alwaysSampleSlow": true,
      "slowThresholdMs": 1000
    }
  },
  "visualization": {
    "enabled": true,
    "options": {
      "showAttributes": true,
      "showTimings": true,
      "showErrors": true,
      "showCriticalPath": true,
      "maxDepth": 0,
      "minDuration": 0,
      "colorsEnabled": true
    }
  },
  "analysis": {
    "enabled": true,
    "bottleneckThresholdMs": 100
  },
  "scopeDslTracing": {
    "enabled": true,
    "coverageResolution": {
      "enabled": true,
      "verbosity": "standard",
      "includePerformanceMetrics": true,
      "includeCandidateDetails": true,
      "includePhaseBreakdown": true,
      "outputFormats": [
        "text"
      ],
      "textFormatOptions": {
        "enableColors": false,
        "includeTimestamps": true,
        "showSpanHierarchy": true,
        "showEvents": true
      }
    }
  }
}