{
  "name": "living-narrative-engine",
  "description": "A text adventure game engine with LLM integration.",
  "version": "0.0.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "living-narrative-validate": "./bin/living-narrative-validate.js",
    "ln-validate": "./bin/living-narrative-validate.js"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.1",
    "@testing-library/dom": "^10.4.0",
    "@toolsycc/json-repair": "^0.1.22",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "gpt-tokenizer": "^3.4.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsdom": "^27.2.0",
    "json-logic-js": "^2.0.5",
    "lodash": "^4.17.21",
    "lru-cache": "^11.2.4",
    "pako": "^2.1.0",
    "semver": "^7.7.3",
    "tinyqueue": "^3.0.0",
    "upgrade": "^1.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "axe-core": "^4.11.0",
    "babel-jest": "^30.2.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "chalk": "^5.6.0",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "dependency-cruiser": "^17.3.2",
    "esbuild": "^0.27.*",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-jsdoc": "^61.5.0",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^4.4.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "html-validate": "^10.4.0",
    "http-server": "^14.1.1",
    "inquirer": "^13.0.2",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-extended": "^7.0.0",
    "ora": "^9.0.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "whatwg-fetch": "^3.6.20",
    "yargs": "^18.0.0"
  },
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write . --ignore-unknown --log-level error",
    "lint": "eslint . --fix",
    "lint:staged": "git diff --name-only --cached | grep -E '\\.(js|mjs|ts)$' | xargs eslint --fix",
    "lint:modrefs-report": "bash -c \"ESLINT_USE_FLAT_CONFIG=1 eslint -c scripts/eslint-modref.config.mjs --ext .js,.mjs --no-report-unused-disable-directives -f stylish --output-file reports/eslint-modref-report.txt src || true\"",
    "scope:lint": "node scripts/lintScopes.js",
    "lint:schema-patterns": "node scripts/lintSchemaPatterns.js",
    "depcruise": "dependency-cruiser src",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' jest --config jest.config.unit.js --env=jsdom --silent --coverage",
    "test:unit:debug": "jest --config jest.config.unit.js --env=jsdom --silent=false --detectOpenHandles",
    "test:integration": "jest --config jest.config.integration.js --env=jsdom --silent --coverage",
    "test:integration:build": "jest --config jest.config.build.js --env=jsdom --silent",
    "test:e2e": "jest --config jest.config.e2e.js --env=jsdom --silent --coverage",
    "test:performance": "jest --config jest.config.performance.js --env=jsdom --silent",
    "test:memory": "node --expose-gc ./node_modules/.bin/jest --config jest.config.memory.js --env=jsdom --silent --runInBand",
    "test:single": "jest --env=jsdom --silent=false --runInBand",
    "test:ci": "npm run validate:operations && npm run typecheck && npm run test:unit && npm run test:integration && npm run test:integration:build && npm run test:e2e",
    "create-mod": "node scripts/createMod.mjs",
    "create:recipe": "node scripts/create-recipe-wizard.js",
    "validate": "node scripts/validateMods.js",
    "validate:mod": "node scripts/validateMods.js --mod",
    "validate:strict": "node scripts/validateMods.js --strict",
    "validate:json": "node scripts/validateMods.js --format json",
    "validate:html": "node scripts/validateMods.js --format html --output validation-report.html",
    "validate:fast": "node scripts/validateMods.js --no-dependencies --quiet",
    "validate:deps-only": "node scripts/validateMods.js --no-cross-references",
    "validate:refs-only": "node scripts/validateMods.js --no-dependencies",
    "validate:critical": "node scripts/validateMods.js --severity critical",
    "validate:ci": "node scripts/validateMods.js --strict --format junit --output test-results.xml",
    "validate:body-descriptors": "node scripts/validate-body-descriptors.js",
    "validate:recipe": "node scripts/validate-recipe.js",
    "validate:operations": "node scripts/validateOperations.js",
    "generate:effects": "node scripts/generateEffects.js",
    "validate:goap-contexts": "node scripts/validateGoapContexts.js",
    "validate:goals": "node scripts/validateGoals.js",
    "validate:modifier-paths": "node scripts/validateModifierPaths.js",
    "update-manifest": "node scripts/updateManifest.js",
    "update-manifest:validate": "node scripts/updateManifest.js --validate-references",
    "update-manifest:strict": "node scripts/updateManifest.js --validate-references --fail-on-violations",
    "update-manifest:all": "node scripts/updateManifest.js --batch --validate-references",
    "update-manifest:batch": "node scripts/updateManifest.js --batch --validate-references --verbose",
    "fix-mod-violations": "node scripts/updateManifest.js --validate-references --strict --format=console",
    "validate-mod": "node scripts/updateManifest.js --validate-references --dry-run --format=console",
    "report-mod-violations": "node scripts/updateManifest.js --validate-references --format=json --output=validation-reports/manifest-violations.json",
    "find-condition-refs": "node scripts/findConditionReferences.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --mode=development",
    "build:prod": "node scripts/build.js --mode=production",
    "build:watch": "node scripts/build.js --watch",
    "build:clean": "rimraf dist",
    "build:validate": "node scripts/build.js --validate-only",
    "build:debug": "node scripts/build.js --verbose --no-parallel",
    "build:test": "node scripts/build.js --fast",
    "prebuild": "npm run build:clean && npm run update-manifest",
    "cleanup:ports": "node scripts/cleanup-ports.js",
    "prestart:clean": "npm run cleanup:ports",
    "start": "npm run build && http-server dist -p 8080 -o --cors",
    "start:clean": "npm run cleanup:ports && npm run start:all",
    "start:all": "concurrently \"npm run start\" \"npm run start --prefix llm-proxy-server\"",
    "dev": "concurrently \"npm run start\" \"npm run dev --prefix llm-proxy-server\"",
    "dev:clean": "npm run cleanup:ports && npm run dev",
    "build:with-validation": "npm run validate && npm run build",
    "validate:socket-consistency": "node scripts/validateSocketConsistency.js",
    "analytics:notes": "node scripts/notes-analytics-dashboard.js"
  }
}
