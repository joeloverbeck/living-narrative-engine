{
  "name": "living-narrative-engine",
  "description": "A text adventure game engine with LLM integration.",
  "version": "0.0.1",
  "dependencies": {
    "@msgpack/msgpack": "^3.1.1",
    "@testing-library/dom": "^10.4.0",
    "@toolsycc/json-repair": "^0.1.22",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "glob": "^11.0.3",
    "gpt-tokenizer": "^3.0.1",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsdom": "^26.1.0",
    "json-logic-js": "^2.0.5",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "pako": "^2.1.0",
    "semver": "^7.7.1",
    "tinyqueue": "^3.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.26.9",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^30.0.4",
    "babel-jest": "^30.0.4",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "dependency-cruiser": "^16.10.2",
    "esbuild": "^0.25.*",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^51.3.4",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^6.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "whatwg-fetch": "^3.6.20",
    "yargs": "^18.0.0"
  },
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write . --ignore-unknown --log-level error",
    "lint": "eslint . --fix",
    "scope:lint": "node scripts/lintScopes.js",
    "depcruise": "dependency-cruiser src",
    "test": "jest --env=jsdom --silent --coverage",
    "test:single": "jest --env=jsdom --silent=false --runInBand",
    "test:ci": "jest --env=jsdom --ci --silent --coverage",
    "test:load-order": "jest --env=jsdom --silent=false --runInBand tests/integration/loaders/modsLoader.definitionFirst.test.js",
    "test:update": "jest --env=jsdom --updateSnapshot",
    "create-mod": "node scripts/createMod.mjs",
    "update-manifest": "node scripts/updateManifest.js",
    "find-condition-refs": "node scripts/findConditionReferences.js",
    "build": "esbuild src/main.js --bundle --outfile=dist/bundle.js --platform=browser --sourcemap && esbuild src/anatomy-visualizer.js --bundle --outfile=dist/anatomy-visualizer.js --platform=browser --sourcemap && cpy index.html game.html anatomy-visualizer.html dist && cpy css dist && cpy data dist && cpy config dist && cpy favicon.ico apple-touch-icon.png favicon-16x16.png favicon-32x32.png site.webmanifest android-chrome-192x192.png android-chrome-512x512.png dist",
    "start": "npm run build && http-server dist -o",
    "start:all": "concurrently \"npm run start\" \"npm run start --prefix llm-proxy-server\"",
    "dev": "concurrently \"npm run start\" \"npm run dev --prefix llm-proxy-server\""
  }
}
