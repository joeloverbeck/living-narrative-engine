{
  "name": "living-narrative-engine",
  "description": "A text adventure game engine with LLM integration.",
  "version": "0.0.1",
  "dependencies": {
    "@msgpack/msgpack": "^3.1.1",
    "@testing-library/dom": "^10.4.0",
    "@toolsycc/json-repair": "^0.1.22",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "glob": "^11.0.3",
    "gpt-tokenizer": "^3.0.1",
    "jest-mock-extended": "^4.0.0-beta1",
    "jsdom": "^26.1.0",
    "json-logic-js": "^2.0.5",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "pako": "^2.1.0",
    "semver": "^7.7.1",
    "tinyqueue": "^3.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.26.9",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^30.0.4",
    "babel-jest": "^30.0.4",
    "chalk": "^5.5.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "cpy-cli": "^5.0.0",
    "dependency-cruiser": "^17.0.0",
    "esbuild": "^0.25.*",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^52.0.2",
    "fs-extra": "^11.3.0",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-extended": "^6.0.0",
    "ora": "^8.2.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "whatwg-fetch": "^3.6.20",
    "yargs": "^18.0.0"
  },
  "scripts": {
    "typecheck": "tsc",
    "format": "prettier --write . --ignore-unknown --log-level error",
    "lint": "eslint . --fix",
    "scope:lint": "node scripts/lintScopes.js",
    "depcruise": "dependency-cruiser src",
    "test:unit": "jest --config jest.config.unit.js --env=jsdom --silent --coverage --forceExit",
    "test:unit:debug": "jest --config jest.config.unit.js --env=jsdom --silent=false --detectOpenHandles",
    "test:integration": "jest --config jest.config.integration.js --env=jsdom --silent --coverage",
    "test:e2e": "jest --config jest.config.e2e.js --env=jsdom --silent --coverage",
    "test:performance": "jest --config jest.config.performance.js --env=jsdom --silent",
    "test:memory": "node --expose-gc ./node_modules/.bin/jest --config jest.config.memory.js --env=jsdom --silent",
    "test:single": "jest --env=jsdom --silent=false --runInBand",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "create-mod": "node scripts/createMod.mjs",
    "update-manifest": "node scripts/updateManifest.js",
    "find-condition-refs": "node scripts/findConditionReferences.js",
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --mode=development",
    "build:prod": "node scripts/build.js --mode=production",
    "build:watch": "node scripts/build.js --watch",
    "build:clean": "rimraf dist",
    "build:validate": "node scripts/build.js --validate-only",
    "build:debug": "node scripts/build.js --verbose --no-parallel",
    "build:test": "node scripts/build.js --fast",
    "prebuild": "npm run build:clean",
    "start": "npm run build && http-server dist -o",
    "start:all": "concurrently \"npm run start\" \"npm run start --prefix llm-proxy-server\"",
    "dev": "concurrently \"npm run start\" \"npm run dev --prefix llm-proxy-server\""
  }
}
