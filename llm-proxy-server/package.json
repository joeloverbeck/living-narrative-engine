{
  "name": "llm-proxy-server",
  "version": "1.0.0",
  "description": "Backend proxy server for securely handling API keys for LLM services.",
  "main": "src/core/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/core/server.js",
    "dev": "node --watch src/core/server.js",
    "test": "NODE_ENV=test jest --silent --coverage",
    "test:unit": "NODE_ENV=test jest --silent --coverage --testPathIgnorePatterns='/node_modules/' '<rootDir>/tests/performance/' '<rootDir>/tests/memory/' '<rootDir>/tests/integration/' '<rootDir>/tests/e2e/'",
    "test:integration": "NODE_ENV=test jest --config jest.config.integration.js --silent",
    "test:e2e": "NODE_ENV=test jest --config jest.config.e2e.js --silent",
    "test:performance": "NODE_ENV=test node --expose-gc ./node_modules/.bin/jest --config jest.config.perf.js --silent=false",
    "test:memory": "NODE_ENV=test node --expose-gc ./node_modules/.bin/jest --config jest.config.memory.js --silent=false",
    "test:single": "NODE_ENV=test jest --silent=false --runInBand",
    "test:ci": "NODE_ENV=test jest --ci --silent --coverage",
    "typecheck": "tsc",
    "format": "prettier --write \"**/*.{js,json,md,cjs}\" --log-level error",
    "format:check": "prettier --check \"**/*.{js,json,md,cjs}\" --log-level error",
    "lint": "eslint . --ext .js,.cjs --fix"
  },
  "keywords": [
    "llm",
    "proxy",
    "api-security"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.6.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ipaddr.js": "^2.1.0",
    "node-cron": "^4.2.1",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.0.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "babel-jest": "^30.0.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^60.1.1",
    "globals": "^16.2.0",
    "jest": "^30.0.4",
    "prettier": "^3.5.3",
    "supertest": "^7.1.3",
    "typescript": "^5.8.3"
  }
}
