# Windows Terminal Logging Fix Configuration
# Copy these settings to your .env file or set as environment variables

# Reduce buffer size to flush more frequently (default: 100)
DEBUG_LOGGING_WRITE_BUFFER_SIZE=25

# Reduce flush interval to 500ms for more aggressive flushing (default: 1000)
DEBUG_LOGGING_FLUSH_INTERVAL=500

# Increase concurrent writes for better throughput (default: 5)
DEBUG_LOGGING_MAX_CONCURRENT_WRITES=10

# Enable debug logging
DEBUG_LOGGING_ENABLED=true

# Optional: Set log path if you want a specific location
# DEBUG_LOGGING_PATH=./logs

# Note: After updating these settings, restart the llm-proxy-server for changes to take effect