{
  "forbidden": [
    {
      "name": "no-circular",
      "severity": "error",
      "comment": "Circular dependencies are not allowed",
      "from": {},
      "to": {
        "circular": true
      }
    },
    {
      "name": "no-orphans",
      "severity": "warn",
      "comment": "Warn for orphaned files",
      "from": {
        "orphan": true,
        "pathNot": [
          "node_modules",
          "dist",
          "coverage",
          "\\.d\\.ts$",
          "\\.(test|spec)\\.(js|ts)$",
          "jest\\.config\\.(js|ts)$",
          "jest\\.setup\\.(js|ts)$",
          "benchmarks/"
        ]
      },
      "to": {}
    },
    {
      "name": "not-to-test",
      "severity": "error",
      "comment": "Don't import test files from non-test files",
      "from": {
        "pathNot": "\\.(test|spec)\\.(js|ts)$"
      },
      "to": {
        "path": "\\.(test|spec)\\.(js|ts)$"
      }
    },
    {
      "name": "not-to-dev-dep",
      "severity": "error",
      "comment": "Don't import dev dependencies in production code",
      "from": {
        "path": "^src/"
      },
      "to": {
        "dependencyTypes": ["npm-dev"]
      }
    }
  ],
  "allowedSeverity": "warn",
  "options": {
    "doNotFollow": {
      "path": [
        "node_modules",
        "dist",
        "coverage",
        "benchmarks/"
      ]
    },
    "exclude": {
      "path": [
        "node_modules",
        "dist",
        "coverage",
        "benchmarks/"
      ]
    },
    "includeOnly": {
      "path": [
        "^src/",
        "^tests/"
      ]
    },
    "tsPreCompilationDeps": false,
    "tsConfig": {
      "fileName": "tsconfig.json"
    },
    "enhancedResolveOptions": {
      "exportsFields": ["exports"],
      "conditionNames": ["import", "require", "node", "default"]
    },
    "reporterOptions": {
      "dot": {
        "collapsePattern": "node_modules/[^/]+",
        "theme": {
          "graph": {
            "splines": "ortho"
          }
        }
      },
      "archi": {
        "collapsePattern": "^src/[^/]+|^tests/[^/]+"
      }
    }
  }
}