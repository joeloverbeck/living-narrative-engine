{
  "id": "demo:item_potion_heal_minor",
  "components": {
    "Name": {
      "value": "Minor Healing Potion"
    },
    "Description": {
      "text": "A small vial containing a faintly glowing red liquid. Restores a minor amount of health."
    },
    "Position": {
      "locationId": "demo:room_treasure"
    },
    "Item": {
      "tags": [
        "potion",
        "healing",
        "consumable"
      ],
      "stackable": true,
      "value": 10
    },
    "Usable": {
      "usability_conditions": [
        {
          "condition_type": "health_below_max",
          "$comment": "User must not be at full health.",
          "failure_message": "Your health is already full."
        }
      ],
      "target_required": false,
      "effects": [
        {
          "type": "trigger_event",
          "parameters": {
            "eventName": "event:apply_heal_requested",
            "payload": {
              "amount": 10,
              "healTargetSpecifier": "user"
            }
          }
        }
      ],
      "consume_on_use": true,
      "failure_message_default": "You cannot use the potion right now."
    }
  }
}