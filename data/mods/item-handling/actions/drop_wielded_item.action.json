{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "item-handling:drop_wielded_item",
  "name": "Drop Wielded Item",
  "description": "Release and drop an item you are currently wielding",
  "required_components": {
    "actor": ["item-handling-states:wielding"]
  },
  "targets": {
    "primary": {
      "scope": "items:wielded_items",
      "placeholder": "item",
      "description": "Wielded item to drop"
    }
  },
  "forbidden_components": {
    "actor": [
      "performances-states:doing_complex_performance",
      "physical-control-states:restraining"
    ]
  },
  "prerequisites": [],
  "template": "drop {item}",
  "visual": {
    "backgroundColor": "#5d4037",
    "textColor": "#efebe9",
    "hoverBackgroundColor": "#6d4c41",
    "hoverTextColor": "#ffffff"
  }
}
