{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "item-handling:drop_item",
  "name": "Drop Item",
  "description": "Drop an item from your inventory at your current location",
  "targets": {
    "primary": {
      "scope": "item-handling:non_wielded_inventory_items",
      "placeholder": "item",
      "description": "Item to drop"
    }
  },
  "forbidden_components": {
    "actor": [
      "performances-states:doing_complex_performance",
      "physical-control-states:restraining"
    ]
  },
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "anatomy:actor-has-free-grabbing-appendage"
      },
      "failure_message": "You need a free hand to grab an item from your inventory."
    }
  ],
  "template": "drop {item}",
  "visual": {
    "backgroundColor": "#5d4037",
    "textColor": "#efebe9",
    "hoverBackgroundColor": "#6d4c41",
    "hoverTextColor": "#ffffff"
  }
}
