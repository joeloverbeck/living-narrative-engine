{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "item-handling:unwield_item",
  "name": "Unwield Item",
  "description": "Stop wielding an item, freeing up your hands",
  "generateCombinations": true,
  "required_components": {
    "actor": ["inventory:inventory", "item-handling-states:wielding"]
  },
  "targets": {
    "primary": {
      "scope": "item-handling:wielded_items",
      "placeholder": "target",
      "description": "Item to stop wielding"
    }
  },
  "template": "unwield {target}",
  "visual": {
    "backgroundColor": "#5d4037",
    "textColor": "#efebe9",
    "hoverBackgroundColor": "#6d4c41",
    "hoverTextColor": "#ffffff"
  }
}
