{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_help_target_to_their_feet",
  "comment": "Handles the 'recovery:help_target_to_their_feet' action. Removes fallen from the target and logs a supportive recovery event.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "recovery:event-is-action-help-target-to-their-feet"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "positioning:fallen",
        "result_variable": "targetFallenState"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "positioning:fallen",
        "result_variable": "actorFallenState"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "positioning:being_restrained",
        "result_variable": "actorRestrainedState"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "and": [
            { "!!": [{ "var": "context.targetFallenState" }] },
            { "!": [{ "var": "context.actorFallenState" }] },
            { "!": [{ "var": "context.actorRestrainedState" }] }
          ]
        },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "positioning:fallen"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": { "entity_ref": "target" }
          },
          {
            "type": "UNLOCK_MOVEMENT",
            "comment": "Allow the assisted actor to move after standing.",
            "parameters": {
              "actor_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} helps {context.targetName} to their feet."
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "physical.target_action"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "locationId",
              "value": "{context.actorPosition.locationId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "targetId",
              "value": "{event.payload.targetId}"
            }
          },
          { "macro": "core:logSuccessAndEndTurn" }
        ],
        "else_actions": [
          {
            "type": "IF",
            "parameters": {
              "condition": {
                "!": [{ "var": "context.targetFallenState" }]
              },
              "then_actions": [
                {
                  "type": "SET_VARIABLE",
                  "parameters": {
                    "variable_name": "logMessage",
                    "value": "{context.targetName} is already on their feet."
                  }
                }
              ],
              "else_actions": [
                {
                  "type": "IF",
                  "parameters": {
                    "condition": {
                      "!!": [{ "var": "context.actorFallenState" }]
                    },
                    "then_actions": [
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "You need to stand up before helping someone else."
                        }
                      }
                    ],
                    "else_actions": [
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "You cannot help someone up while restrained."
                        }
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "error"
            }
          },
          { "macro": "core:logFailureAndEndTurn" }
        ]
      }
    }
  ]
}
