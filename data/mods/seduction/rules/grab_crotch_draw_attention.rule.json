{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "grab_crotch_draw_attention",
  "comment": "Handles the 'seduction:grab_crotch_draw_attention' action. Describes the actor grabbing their clothed crotch to highlight the bulge.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "seduction:event-is-action-grab-crotch-draw-attention"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "comment": "Capture the actor name for log interpolation.",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "comment": "Look up the actor position to tag the perceptible event.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Compose the shared log and perceptible event message.",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} grabs their crotch through the clothes, drawing attention to its bulge."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.self_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
