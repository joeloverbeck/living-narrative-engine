{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_stroke_penis_to_draw_attention",
  "comment": "Handles the 'seduction:stroke_penis_to_draw_attention' action by announcing the seductive stroking display and ending the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "seduction:event-is-action-stroke-penis-to-draw-attention"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "comment": "Get actor name for the messages.",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "comment": "Get location for the perceptible event.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Construct the perceptible log message for observers.",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} strokes their bare penis seductively, drawing attention to it."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
