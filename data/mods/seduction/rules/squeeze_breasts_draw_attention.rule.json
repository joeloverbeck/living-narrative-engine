{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "squeeze_breasts_draw_attention",
  "comment": "Handles the 'seduction:squeeze_breasts_draw_attention' action by broadcasting the sensual squeeze.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "seduction:event-is-action-squeeze-breasts-draw-attention"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "comment": "Capture the actor name for log interpolation.",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "comment": "Fetch the actor position for perceptible event tagging.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Compose the shared log and perceptible event message.",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} grabs her breasts and squeezes them sexily, drawing attention to them."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.self_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
