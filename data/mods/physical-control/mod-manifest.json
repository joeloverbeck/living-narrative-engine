{
  "$schema": "http://example.com/schemas/mod-manifest.schema.json",
  "id": "physical-control",
  "version": "1.0.0",
  "name": "physical-control",
  "description": "Actions for physically controlling or manipulating another person's body position.",
  "actionPurpose": "Physically force or manipulate someone into different positions through direct physical control.",
  "actionConsiderWhen": "Asserting physical dominance, forcing someone into a position, pushing someone away, or physically controlling another.",
  "dependencies": [
    {
      "id": "anatomy",
      "version": "^1.0.0"
    },
    {
      "id": "clothing",
      "version": "^1.0.0"
    },
    {
      "id": "core",
      "version": "^1.0.0"
    },
    {
      "id": "movement",
      "version": "^1.0.0"
    },
    {
      "id": "positioning",
      "version": "^1.0.0"
    }
  ],
  "content": {
    "actions": [
      "force_bend_over.action.json",
      "force_to_knees.action.json",
      "push_off.action.json",
      "push_onto_lying_furniture.action.json",
      "turn_around.action.json"
    ],
    "rules": [
      "handle_force_bend_over.rule.json",
      "handle_force_to_knees.rule.json",
      "handle_push_off.rule.json",
      "handle_push_onto_lying_furniture.rule.json",
      "handle_turn_around.rule.json"
    ],
    "conditions": [
      "event-is-action-force-bend-over.condition.json",
      "event-is-action-force-to-knees.condition.json",
      "event-is-action-push-off.condition.json",
      "event-is-action-push-onto-lying-furniture.condition.json",
      "event-is-action-turn-around.condition.json"
    ],
    "events": [
      "actor_turned_around.event.json"
    ]
  }
}
