{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_restrain_target",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "physical-control:event-is-action-restrain-target"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "RESOLVE_OUTCOME",
      "parameters": {
        "actor_skill_component": "skills:grappling_skill",
        "target_skill_component": "skills:defense_skill",
        "actor_skill_default": 10,
        "target_skill_default": 0,
        "formula": "ratio",
        "result_variable": "restrainResult",
        "target_role": "primary"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Set common variables needed by the end-turn macros",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "IF",
      "comment": "Handle CRITICAL_SUCCESS outcome - flat structure (1 of 4)",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.restrainResult.outcome"
            },
            "CRITICAL_SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "MERGE_CLOSENESS_CIRCLE",
            "comment": "Being close enough to restrain should join the actor and target into a closeness circle",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "physical-control-states:being_restrained",
              "value": {
                "restraining_entity_id": "{event.payload.actorId}"
              }
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "physical-control-states:restraining",
              "value": {
                "restrained_entity_id": "{event.payload.targetId}",
                "initiated": true
              }
            }
          },
          {
            "type": "LOCK_GRABBING",
            "comment": "Occupy both grabbing appendages while restraining the target",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "count": 2,
              "item_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} restrains {context.targetName}, preventing them from moving freely.",
              "actor_description": "I restrain {context.targetName}, preventing them from moving freely.",
              "target_description": "{context.actorName} restrains me, preventing me from moving freely.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear the sounds of a struggle nearby.",
                "tactile": "I feel the vibrations of scuffling nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} restrains {context.targetName}, preventing them from moving freely."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle SUCCESS outcome - flat structure (2 of 4)",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.restrainResult.outcome"
            },
            "SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "MERGE_CLOSENESS_CIRCLE",
            "comment": "Being close enough to restrain should join the actor and target into a closeness circle",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "physical-control-states:being_restrained",
              "value": {
                "restraining_entity_id": "{event.payload.actorId}"
              }
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "physical-control-states:restraining",
              "value": {
                "restrained_entity_id": "{event.payload.targetId}",
                "initiated": true
              }
            }
          },
          {
            "type": "LOCK_GRABBING",
            "comment": "Occupy both grabbing appendages while restraining the target",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "count": 2,
              "item_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} restrains {context.targetName}, preventing them from moving freely.",
              "actor_description": "I restrain {context.targetName}, preventing them from moving freely.",
              "target_description": "{context.actorName} restrains me, preventing me from moving freely.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear the sounds of a struggle nearby.",
                "tactile": "I feel the vibrations of scuffling nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} restrains {context.targetName}, preventing them from moving freely."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FAILURE outcome - flat structure (3 of 4)",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.restrainResult.outcome"
            },
            "FAILURE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} attempts to restrain {context.targetName}, but {context.targetName} resists, remaining free to move.",
              "actor_description": "I try to restrain {context.targetName}, but they resist and stay free to move.",
              "target_description": "{context.actorName} tries to restrain me, but I resist and remain free to move.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear the sounds of a struggle nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} attempts to restrain {context.targetName}, but {context.targetName} resists, remaining free to move."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FUMBLE outcome - flat structure (4 of 4)",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.restrainResult.outcome"
            },
            "FUMBLE"
          ]
        },
        "then_actions": [
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "recovery-states:fallen",
              "value": {}
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} attempts to restrain {context.targetName}, but during the struggle, {context.actorName} falls to the ground.",
              "actor_description": "I try to restrain {context.targetName}, but lose my balance and fall to the ground.",
              "target_description": "{context.actorName} lunges to restrain me, but loses their balance and falls to the ground.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear someone stumble and hit the ground nearby.",
                "tactile": "I feel the thump of someone falling nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} attempts to restrain {context.targetName}, but during the struggle, {context.actorName} falls to the ground."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    }
  ]
}
