{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_let_go_of_restrained_target",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "physical-control:event-is-action-let-go-of-restrained-target"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Set common variables needed by the end-turn macros",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "BREAK_CLOSENESS_WITH_TARGET",
      "comment": "Release any closeness formed by the physical restraint",
      "parameters": {
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "physical-control-states:restraining"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "physical-control-states:being_restrained"
      }
    },
    {
      "type": "UNLOCK_GRABBING",
      "comment": "Free both grabbing appendages that were locked while restraining the target",
      "parameters": {
        "actor_id": "{event.payload.actorId}",
        "count": 2,
        "item_id": "{event.payload.targetId}"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": {
        "entity_ref": "actor"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": {
        "entity_ref": "target"
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.actorName} lets go of {context.targetName}, leaving them unrestrained.",
        "actor_description": "I let go of {context.targetName}, releasing my hold on them.",
        "target_description": "{context.actorName} lets go of me, leaving me unrestrained.",
        "perception_type": "physical.target_action",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}",
        "alternate_descriptions": {
          "auditory": "I hear movement as someone is released nearby."
        }
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} lets go of {context.targetName}, leaving them unrestrained."
      }
    },
    {
      "macro": "core:logSuccessOutcomeAndEndTurn"
    }
  ]
}
