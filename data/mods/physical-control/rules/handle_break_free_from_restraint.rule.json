{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_break_free_from_restraint",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "physical-control:event-is-action-break-free-from-restraint"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "RESOLVE_OUTCOME",
      "parameters": {
        "actor_skill_component": "skills:grappling_skill",
        "target_skill_component": "skills:grappling_skill",
        "actor_skill_default": 10,
        "target_skill_default": 10,
        "formula": "ratio",
        "result_variable": "breakFreeResult",
        "target_role": "primary"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Common variables for macros and dispatches",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "IF",
      "comment": "Handle CRITICAL_SUCCESS outcome",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.breakFreeResult.outcome"
            },
            "CRITICAL_SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "BREAK_CLOSENESS_WITH_TARGET",
            "comment": "Breaking free should also break the close proximity to the restrainer",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "physical-control-states:being_restrained"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "physical-control-states:restraining"
            }
          },
          {
            "type": "UNLOCK_GRABBING",
            "comment": "Release the restrainer's grabbing appendages occupied by the actor",
            "parameters": {
              "actor_id": "{event.payload.targetId}",
              "count": 2,
              "item_id": "{event.payload.actorId}"
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "recovery-states:fallen",
              "value": {}
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} breaks free from {context.targetName}'s grip, and during the struggle, {context.targetName} falls to the ground.",
              "actor_description": "I break free from {context.targetName}'s grip; in the struggle, they fall to the ground.",
              "target_description": "{context.actorName} breaks free from my grip; in the struggle, I fall to the ground.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear a sudden struggle and someone breaking free nearby.",
                "tactile": "I feel a sudden jolt and release of tension nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} breaks free from {context.targetName}'s grip, and during the struggle, {context.targetName} falls to the ground."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle SUCCESS outcome",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.breakFreeResult.outcome"
            },
            "SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "BREAK_CLOSENESS_WITH_TARGET",
            "comment": "Breaking free should also break the close proximity to the restrainer",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "physical-control-states:being_restrained"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "physical-control-states:restraining"
            }
          },
          {
            "type": "UNLOCK_GRABBING",
            "comment": "Release the restrainer's grabbing appendages occupied by the actor",
            "parameters": {
              "actor_id": "{event.payload.targetId}",
              "count": 2,
              "item_id": "{event.payload.actorId}"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} breaks free from {context.targetName}'s grip.",
              "actor_description": "I break free from {context.targetName}'s grip.",
              "target_description": "{context.actorName} breaks free from my grip.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear struggling and someone breaking free nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} breaks free from {context.targetName}'s grip."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FAILURE outcome",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.breakFreeResult.outcome"
            },
            "FAILURE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} tries to break free from {context.targetName}'s grip, but fails to release themselves.",
              "actor_description": "I struggle against {context.targetName}'s grip, but can't break free.",
              "target_description": "{context.actorName} struggles against my grip, but I keep them restrained.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear someone struggling nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} tries to break free from {context.targetName}'s grip, but fails to release themselves."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FUMBLE outcome",
      "parameters": {
        "condition": {
          "==": [
            {
              "var": "context.breakFreeResult.outcome"
            },
            "FUMBLE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} tries to break free from {context.targetName}'s grip, but fails to release themselves.",
              "actor_description": "I struggle against {context.targetName}'s grip, but can't break free.",
              "target_description": "{context.actorName} struggles against my grip, but I keep them restrained.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear someone struggling nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} tries to break free from {context.targetName}'s grip, but fails to release themselves."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    }
  ]
}
