{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "physical-control:event-is-action-push-off",
  "description": "True when the event is an attempt to execute the push_off action",
  "logic": {
    "==": [
      {
        "var": "event.payload.actionId"
      },
      "physical-control:push_off"
    ]
  }
}
