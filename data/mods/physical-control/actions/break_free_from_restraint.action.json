{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "physical-control:break_free_from_restraint",
  "name": "Break Free From Restraint",
  "description": "Attempt to escape from a restraining opponent.",
  "template": "break free from {target} ({chance}% chance)",
  "generateCombinations": false,
  "required_components": {
    "actor": ["physical-control-states:being_restrained"],
    "primary": ["physical-control-states:restraining"]
  },
  "targets": {
    "primary": {
      "scope": "physical-control:restraining_entity_from_being_restrained",
      "placeholder": "target",
      "description": "Actor restraining you"
    }
  },
  "chanceBased": {
    "enabled": true,
    "contestType": "opposed",
    "actorSkill": {
      "component": "skills:grappling_skill",
      "property": "value",
      "default": 10
    },
    "targetSkill": {
      "component": "skills:grappling_skill",
      "property": "value",
      "default": 10,
      "targetRole": "primary"
    },
    "formula": "ratio",
    "bounds": {
      "min": 5,
      "max": 95
    },
    "outcomes": {
      "criticalSuccessThreshold": 5,
      "criticalFailureThreshold": 95
    }
  },
  "visual": {
    "backgroundColor": "#2f2f2f",
    "textColor": "#f8f9fa",
    "hoverBackgroundColor": "#3f3d56",
    "hoverTextColor": "#f8f9ff"
  }
}
