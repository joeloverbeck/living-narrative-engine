{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "physical-control:force_to_knees",
  "name": "Force to Knees",
  "description": "Forcefully push someone down to kneel before you",
  "targets": {
    "primary": {
      "scope": "personal-space:close_actors_facing_each_other",
      "placeholder": "target",
      "description": "The actor to force to their knees"
    }
  },
  "required_components": {
    "actor": ["personal-space-states:closeness"]
  },
  "forbidden_components": {
    "actor": [
      "positioning:biting_neck",
      "positioning:kneeling_before",
      "positioning:straddling_waist",
      "hugging-states:hugging",
      "hugging-states:being_hugged",
      "lying-states:lying_on",
      "physical-control-states:being_restrained",
      "physical-control-states:restraining",
      "positioning:fallen"
    ],
    "primary": ["positioning:kneeling_before", "sitting-states:sitting_on"]
  },
  "template": "force {target} to their knees before you",
  "visual": {
    "backgroundColor": "#2f2f2f",
    "textColor": "#f8f9fa",
    "hoverBackgroundColor": "#3f3d56",
    "hoverTextColor": "#f8f9ff"
  }
}
