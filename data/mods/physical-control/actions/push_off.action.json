{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "physical-control:push_off",
  "name": "Push Off",
  "description": "Push someone off you, breaking closeness forcefully",
  "targets": "positioning:close_actors_facing_each_other_or_behind_target",
  "required_components": {
    "actor": ["positioning:closeness"]
  },
  "forbidden_components": {
    "actor": [
      "positioning:straddling_waist",
      "positioning:being_hugged"
    ],
    "primary": ["positioning:sitting_on"]
  },
  "template": "push {target} off you",
  "visual": {
    "backgroundColor": "#2f2f2f",
    "textColor": "#f8f9fa",
    "hoverBackgroundColor": "#3f3d56",
    "hoverTextColor": "#f8f9ff"
  }
}
