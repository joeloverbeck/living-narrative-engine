{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "violence:slap",
  "name": "Slap",
  "description": "Slap someone across the face",
  "targets": {
    "primary": {
      "scope": "core:actors_in_location",
      "placeholder": "target",
      "description": "Person to slap"
    }
  },
  "forbidden_components": {
    "actor": [
      "positioning:hugging",
      "sex-states:giving_blowjob",
      "positioning:doing_complex_performance",
      "positioning:bending_over",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen",
      "positioning:sitting_on"
    ]
  },
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "anatomy:actor-has-free-grabbing-appendage"
      },
      "failure_message": "You need a free hand to slap someone."
    },
    {
      "logic": {
        "isActorLocationLit": ["actor"]
      },
      "failure_message": "It is too dark to see who to slap."
    }
  ],
  "template": "slap {target}",
  "visual": {
    "backgroundColor": "#8b0000",
    "textColor": "#ffffff",
    "hoverBackgroundColor": "#b71c1c",
    "hoverTextColor": "#ffebee"
  }
}
