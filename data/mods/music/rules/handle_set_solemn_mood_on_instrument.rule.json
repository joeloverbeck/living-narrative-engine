{
  "": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_set_solemn_mood_on_instrument",
  "comment": "Handle setting solemn mood on instrument performance",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "music:event-is-action-set-solemn-mood-on-instrument"
  },
  "actions": [
    {
      "type": "QUERY_COMPONENT",
      "comment": "Fetch actor position for location context",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_LOOKUP",
      "parameters": {
        "lookup_id": "music:mood_lexicon",
        "entry_key": "solemn",
        "result_variable": "mood_data",
        "missing_value": {
          "adj": "solemn",
          "adjectives": "solemn",
          "noun": "solemn"
        }
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actor_name"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "instrument_name"
      }
    },
    {
      "type": "MODIFY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "music:performance_mood",
        "field": "mood",
        "mode": "set",
        "value": "solemn"
      }
    },
    {
      "type": "MODIFY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "music:performance_mood",
        "field": "set_by_actor",
        "mode": "set",
        "value": "{event.payload.actorId}"
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": {
          "cat": [
            "{context.actor_name}",
            " begins to play ",
            "{context.instrument_name}",
            " with a ",
            "{context.mood_data.adj}",
            ", solemn tone"
          ]
        },
        "perception_type": "action_target_general",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}"
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
