{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "music:set_solemn_mood_on_instrument",
  "name": "Set Solemn Mood on Instrument",
  "description": "Play an instrument with a solemn emotional tone, or transition an ongoing performance to a solemn mood.",
  "targets": {
    "primary": {
      "scope": "items:examinable_items",
      "placeholder": "instrument",
      "description": "Instrument to play with solemn mood"
    }
  },
  "required_components": {
    "actor": [
      "music:is_musician"
    ],
    "primary": [
      "items:item",
      "music:is_instrument"
    ]
  },
  "forbidden_components": {
    "actor": [
      "positioning:closeness",
      "positioning:being_restrained"
    ]
  },
  "prerequisites": [],
  "template": "set solemn mood on {instrument}",
  "visual": {
    "backgroundColor": "#1a2332",
    "textColor": "#d1d5db",
    "hoverBackgroundColor": "#2d3748",
    "hoverTextColor": "#f3f4f6"
  }
}