    "actor": ["biting-states:biting_neck"]
  },
  "template": "tear out {target}'s throat",
  "visual": {
    "backgroundColor": "#b71c1c",
    "textColor": "#ffffff",
    "hoverBackgroundColor": "#c62828",
    "hoverTextColor": "#ffffff"
  }
}
