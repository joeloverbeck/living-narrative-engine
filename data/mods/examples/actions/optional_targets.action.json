{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "examples:give_item_to_character",
  "name": "Give Item to Character",
  "description": "Give an item to another character, optionally with a message",
  "targets": {
    "primary": {
      "scope": "examples:transferable_items",
      "placeholder": "item",
      "description": "Item to give away"
    },
    "secondary": {
      "scope": "examples:nearby_characters",
      "placeholder": "recipient",
      "description": "Character to receive the item"
    },
    "tertiary": {
      "scope": "examples:notes",
      "placeholder": "note",
      "description": "Optional note to include with the gift",
      "optional": true
    }
  },
  "generateCombinations": false,
  "required_components": {
    "actor": ["core:inventory", "core:position"]
  },
  "prerequisites": [
    {
      "logic": {
        "!=": [
          { "var": "recipient.id" },
          { "var": "actor.id" }
        ]
      },
      "failure_message": "You cannot give items to yourself."
    },
    {
      "logic": {
        "==": [
          { "var": "recipient.components.core:position.locationId" },
          { "var": "actor.components.core:position.locationId" }
        ]
      },
      "failure_message": "The recipient must be in the same location as you."
    },
    {
      "logic": {
        "==": [
          { "var": "recipient.components.core:actor.conscious" },
          true
        ]
      },
      "failure_message": "The recipient must be conscious to receive items."
    }
  ],
  "template": "give {item} to {recipient}{note:with {note}|}"
}