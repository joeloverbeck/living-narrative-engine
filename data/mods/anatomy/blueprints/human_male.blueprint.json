{
  "$schema": "http://example.com/schemas/anatomy.blueprint.schema.json",
  "id": "anatomy:human_male",
  "root": "anatomy:human_male_torso",
  "compose": [
    {
      "part": "anatomy:humanoid_core",
      "include": ["slots", "clothingSlotMappings"]
    }
  ],
  "slots": {
    "penis": {
      "socket": "penis",
      "requirements": {
        "partType": "penis",
        "components": ["anatomy:part"]
      }
    },
    "left_testicle": {
      "socket": "left_testicle",
      "requirements": {
        "partType": "testicle",
        "components": ["anatomy:part"]
      }
    },
    "right_testicle": {
      "socket": "right_testicle",
      "requirements": {
        "partType": "testicle",
        "components": ["anatomy:part"]
      }
    }
  },
  "clothingSlotMappings": {
    "torso_lower": {
      "anatomySockets": [
        "left_hip",
        "right_hip",
        "pubic_hair",
        "penis",
        "left_testicle",
        "right_testicle"
      ],
      "allowedLayers": ["underwear", "base", "outer"],
      "layerOrder": ["underwear", "base", "outer"],
      "defaultLayer": "base",
      "tags": ["torso", "lower_body"]
    },
    "full_body": {
      "blueprintSlots": [
        "head",
        "left_arm",
        "right_arm",
        "left_leg",
        "right_leg"
      ],
      "allowedLayers": ["outer"],
      "layerOrder": ["outer"],
      "defaultLayer": "outer",
      "tags": ["full_body", "special"],
      "conflictsWith": [
        "torso_upper",
        "torso_lower",
        "legs",
        "left_arm_clothing",
        "right_arm_clothing"
      ]
    },
    "genital_covering": {
      "anatomySockets": ["penis", "left_testicle", "right_testicle"],
      "allowedLayers": ["underwear"],
      "layerOrder": ["underwear"],
      "defaultLayer": "underwear",
      "tags": ["underwear", "male_specific"]
    },
    "torso_upper": {
      "blueprintSlots": ["torso"],
      "allowedLayers": ["underwear", "base", "outer"],
      "layerOrder": ["underwear", "base", "outer"],
      "defaultLayer": "base",
      "tags": ["torso", "upper_body"]
    },
    "legs": {
      "blueprintSlots": ["left_leg", "right_leg"],
      "allowedLayers": ["base", "outer"],
      "layerOrder": ["base", "outer"],
      "defaultLayer": "base",
      "tags": ["legs", "lower_body"]
    },
    "left_arm_clothing": {
      "blueprintSlots": ["left_arm"],
      "allowedLayers": ["base", "outer"],
      "layerOrder": ["base", "outer"],
      "defaultLayer": "base",
      "tags": ["arm", "left_side"]
    },
    "right_arm_clothing": {
      "blueprintSlots": ["right_arm"],
      "allowedLayers": ["base", "outer"],
      "layerOrder": ["base", "outer"],
      "defaultLayer": "base",
      "tags": ["arm", "right_side"]
    },
    "feet": {
      "blueprintSlots": ["left_foot", "right_foot"],
      "allowedLayers": ["base", "outer"],
      "layerOrder": ["base", "outer"],
      "defaultLayer": "base",
      "tags": ["feet", "footwear"]
    }
  }
}
