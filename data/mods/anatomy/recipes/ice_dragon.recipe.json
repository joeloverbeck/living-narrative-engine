{
  "$schema": "schema://living-narrative-engine/anatomy.recipe.schema.json",
  "recipeId": "anatomy:ice_dragon",
  "blueprintId": "anatomy:red_dragon",
  "bodyDescriptors": {
    "build": "muscular",
    "composition": "lean",
    "density": "hairless"
  },
  "slots": {
    "head": {
      "partType": "dragon_head",
      "tags": [
        "anatomy:part",
        "anatomy:horned",
        "anatomy:ice_aligned"
      ],
      "properties": {
        "anatomy:horned": {
          "style": "swept",
          "length": "long"
        },
        "anatomy:ice_aligned": {
          "frostAura": "glacial"
        }
      }
    },
    "fire_gland": {
      "partType": "fire_gland",
      "tags": [
        "anatomy:part",
        "anatomy:fire_breathing",
        "anatomy:ice_aligned"
      ],
      "properties": {
        "anatomy:ice_aligned": {
          "temperature": "frigid",
          "breathType": "ice_breath"
        }
      },
      "preferId": "anatomy:dragon_ice_breath_gland"
    }
  },
  "patterns": [
    {
      "matchesAll": {
        "slotType": "leg",
        "orientation": "*_front"
      },
      "partType": "dragon_leg",
      "tags": [
        "anatomy:part",
        "anatomy:scaled",
        "anatomy:frostbound"
      ],
      "properties": {
        "anatomy:scaled": {
          "color": "ice-blue",
          "sheen": "glacial"
        },
        "anatomy:frostbound": {
          "effect": "slow"
        }
      }
    },
    {
      "matchesAll": {
        "slotType": "leg",
        "orientation": "*_rear"
      },
      "partType": "dragon_leg",
      "tags": [
        "anatomy:part",
        "anatomy:scaled",
        "anatomy:powerful"
      ],
      "properties": {
        "anatomy:scaled": {
          "color": "pale_cyan",
          "pattern": "frost_ridge"
        },
        "anatomy:powerful": {
          "drive": "glacier_push"
        }
      }
    },
    {
      "matchesGroup": "limbSet:wing",
      "partType": "dragon_wing",
      "tags": [
        "anatomy:part",
        "anatomy:membranous",
        "anatomy:ice_aligned"
      ],
      "properties": {
        "anatomy:ice_aligned": {
          "frostSheen": "opal"
        }
      }
    },
    {
      "matchesGroup": "appendage:tail",
      "partType": "dragon_tail",
      "tags": [
        "anatomy:part",
        "anatomy:spiked",
        "anatomy:ice_aligned"
      ],
      "properties": {
        "anatomy:spiked": {
          "tip": "ice_cluster"
        }
      }
    }
  ],
  "constraints": {
    "requires": [
      {
        "partTypes": [
          "fire_gland",
          "dragon_tail"
        ]
      }
    ]
  }
