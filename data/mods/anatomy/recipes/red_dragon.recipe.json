{
  "$schema": "schema://living-narrative-engine/anatomy.recipe.schema.json",
  "recipeId": "anatomy:red_dragon",
  "blueprintId": "anatomy:red_dragon",
  "bodyDescriptors": {
    "build": "hulking"
  },
  "slots": {
    "head": {
      "partType": "dragon_head",
      "tags": [
        "anatomy:part",
        "anatomy:horned"
      ],
      "properties": {
        "anatomy:horned": {
          "style": "crown",
          "length": "long"
        }
      }
    }
  },
  "patterns": [
    {
      "matchesPattern": "leg_*_front",
      "partType": "dragon_leg",
      "tags": [
        "anatomy:part"
      ],
      "properties": {}
    },
    {
      "matchesPattern": "leg_*_rear",
      "partType": "dragon_leg",
      "tags": [
        "anatomy:part"
      ],
      "properties": {}
    },
    {
      "matchesGroup": "limbSet:wing",
      "partType": "dragon_wing",
      "tags": [
        "anatomy:part"
      ],
      "properties": {
        "descriptors:length_category": {
          "length": "vast"
        }
      }
    },
    {
      "matchesGroup": "appendage:tail",
      "partType": "dragon_tail",
      "tags": [
        "anatomy:part"
      ],
      "properties": {}
    }
  ],
  "constraints": {
    "requires": [
      {
        "partTypes": [
          "dragon_wing"
        ]
      }
    ]
  }
}