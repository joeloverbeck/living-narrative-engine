{
  "$schema": "http://example.com/schemas/mod-manifest.schema.json",
  "id": "anatomy",
  "version": "1.0.0",
  "name": "Anatomy System",
  "description": "Provides entity anatomy system with body parts, blueprints, and recipes for humanoid characters.",
  "author": "joeloverbeck",
  "gameVersion": ">=0.0.1",
  "content": {
    "components": [
      "components/body.component.json",
      "components/joint.component.json",
      "components/part.component.json",
      "components/sockets.component.json"
    ],
    "entities": {
      "definitions": [
        "entities/definitions/humanoid_arm.entity.json",
        "entities/definitions/humanoid_head.entity.json",
        "entities/definitions/humanoid_leg.entity.json",
        "entities/definitions/humanoid_torso.entity.json"
      ]
    },
    "anatomy": {
      "blueprints": ["blueprints/humanoid_standard.blueprint.json"],
      "recipes": ["recipes/humanoid_standard.recipe.json"]
    }
  }
}
