    "standard_ass_cheek": {
      "socket": "ass",
      "requirements": {
        "partType": "ass_cheek",
        "components": ["anatomy:part"]
      }
    }
  },
  "clothingDefinitions": {
    "standard_head_gear": {
      "blueprintSlots": ["head"],
      "allowedLayers": ["base", "outer", "armor"]
    },
    "standard_face_gear": {
      "blueprintSlots": ["head"],
      "allowedLayers": ["accessories"]
    },
    "standard_torso_upper": {
      "anatomySockets": [
        "left_chest",
        "right_chest",
        "left_shoulder",
        "right_shoulder"
      ],
      "allowedLayers": ["underwear", "base", "outer", "armor"]
    },
    "standard_arm_clothing": {
      "blueprintSlots": ["arm"],
      "allowedLayers": ["base", "outer", "armor"]
    },
    "standard_hands": {
      "blueprintSlots": ["left_hand", "right_hand"],
      "allowedLayers": ["base", "armor", "accessories"]
    },
    "standard_legs": {
      "blueprintSlots": ["left_leg", "right_leg"],
      "allowedLayers": ["underwear", "base", "outer", "armor"]
    },
    "standard_feet": {
      "blueprintSlots": ["left_foot", "right_foot"],
      "allowedLayers": ["base", "armor"]
    },
    "standard_torso_lower": {
      "anatomySockets": [
        "left_hip",
        "right_hip",
        "pubic_hair",
        "penis",
        "left_testicle",
        "right_testicle",
        "vagina",
        "asshole",
        "left_ass",
        "right_ass"
      ],
      "allowedLayers": ["underwear", "base", "outer", "armor"]
    },
    "standard_back_accessory": {
      "anatomySockets": ["upper_back", "lower_back"],
      "allowedLayers": ["accessories", "armor"]
    }
  }
}
