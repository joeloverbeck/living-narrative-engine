{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "anatomy:sockets",
  "description": "Defines attachment points (sockets) on a body part where other parts can connect",
  "dataSchema": {
    "type": "object",
    "properties": {
      "sockets": {
        "type": "array",
        "description": "List of socket definitions for this body part",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique identifier for this socket within the parent part"
            },
            "orientation": {
              "type": "string",
              "description": "Spatial orientation of this socket (supports composite orientations like 'left_front')",
              "anyOf": [
                {
                  "enum": [
                    "left",
                    "right",
                    "mid",
                    "upper",
                    "lower",
                    "front",
                    "back",
                    "left_front",
                    "right_front",
                    "left_rear",
                    "right_rear",
                    "anterior",
                    "anterior_right",
                    "posterior_right",
                    "posterior",
                    "posterior_left",
                    "anterior_left"
                  ]
                },
                {
                  "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"
                }
              ]
            },
            "allowedTypes": {
              "type": "array",
              "description": "Whitelist of part types that can attach to this socket",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "nameTpl": {
              "type": "string",
              "description": "Template for auto-naming attached parts. Supports {{orientation}}, {{type}}, {{index}}, {{parent.name}}"
            }
          },
          "required": ["id", "allowedTypes"],
          "additionalProperties": false
        }
      }
    },
    "required": ["sockets"],
    "additionalProperties": false
  }
}
