{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_show_off_biceps",
  "comment": "Handles the 'exercise:show_off_biceps' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "exercise:event-is-action-show-off-biceps" },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} flexes their arms, showing off the bulging biceps and triceps."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "type": "BURN_ENERGY",
      "comment": "Exercise burns energy at 2.0x base burn rate (moderate activity).",
      "parameters": {
        "entity_ref": "actor",
        "activity_multiplier": 2.0
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
