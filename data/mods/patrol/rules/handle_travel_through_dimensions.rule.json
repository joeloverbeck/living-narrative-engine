{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_travel_through_dimensions",
  "comment": "Handles entity traveling through dimensional tear to reach another dimension",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "patrol:event-is-action-travel-through-dimensions"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "destinationName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName}'s form ripples and distorts as they step through the dimensional tear."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "character_exit"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "MODIFY_COMPONENT",
      "comment": "Update the actor's locationId to the dimensional destination.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "field": "locationId",
        "mode": "set",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} materializes from the dimensional tear, their form stabilizing in alien space."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "character_enter"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} travels through dimensions to {context.destinationName}."
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
