{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "facing:turn_around_to_face",
  "name": "Turn Around to Face",
  "description": "Turn around to face someone you are currently facing away from.",
  "targets": {
    "primary": {
      "scope": "positioning:actors_im_facing_away_from",
      "placeholder": "target",
      "description": "Actor you are facing away from"
    }
  },
  "required_components": {
    "actor": ["personal-space-states:closeness", "positioning:facing_away"]
  },
  "forbidden_components": {
    "actor": [
      "bending-states:bending_over",
      "positioning:biting_neck",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen"
    ]
  },
  "template": "turn around to face {target}",
  "prerequisites": [],
  "visual": {
    "backgroundColor": "#2e3f47",
    "textColor": "#ecf0f1",
    "hoverBackgroundColor": "#4a5f6a",
    "hoverTextColor": "#ffffff"
  }
}
