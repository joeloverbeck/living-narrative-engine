{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_turn_around_to_face",
  "comment": "Handles the 'facing:turn_around_to_face' action. Removes the actor's facing_away component, turning them to face all previously faced-away entities.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "facing:event-is-action-turn-around-to-face"
  },
  "actions": [
    {
      "type": "REMOVE_COMPONENT",
      "comment": "Remove facing_away component so actor faces everyone",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "facing-states:facing_away"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} turns around to face {context.targetName}."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "parameters": {
        "eventType": "facing:actor_faced_everyone",
        "payload": {
          "actor": "{event.payload.actorId}",
          "faced": "{context.targetName}"
        }
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
