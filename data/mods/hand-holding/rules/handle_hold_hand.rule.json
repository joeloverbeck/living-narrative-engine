{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_hold_hand",
  "comment": "Handles the 'hand-holding:hold_hand' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "hand-holding:event-is-action-hold-hand" },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_COMPONENTS",
      "parameters": {
        "entity_ref": "actor",
        "pairs": [
          {
            "component_type": "hand-holding:holding_hand",
            "result_variable": "actorExistingHoldingComponent"
          },
          {
            "component_type": "hand-holding:hand_held",
            "result_variable": "actorExistingHandHeldComponent"
          }
        ]
      }
    },
    {
      "type": "QUERY_COMPONENTS",
      "parameters": {
        "entity_ref": "target",
        "pairs": [
          {
            "component_type": "hand-holding:holding_hand",
            "result_variable": "targetExistingHoldingComponent"
          },
          {
            "component_type": "hand-holding:hand_held",
            "result_variable": "targetExistingHandHeldComponent"
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.actorExistingHoldingComponent" },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "{context.actorExistingHoldingComponent.held_entity_id}",
              "component_type": "hand-holding:hand_held"
            }
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.actorExistingHandHeldComponent" },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "{context.actorExistingHandHeldComponent.holding_entity_id}",
              "component_type": "hand-holding:holding_hand"
            }
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.targetExistingHoldingComponent" },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "{context.targetExistingHoldingComponent.held_entity_id}",
              "component_type": "hand-holding:hand_held"
            }
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.targetExistingHandHeldComponent" },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "{context.targetExistingHandHeldComponent.holding_entity_id}",
              "component_type": "hand-holding:holding_hand"
            }
          }
        ]
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "hand-holding:holding_hand"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "hand-holding:hand_held"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "hand-holding:holding_hand"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "hand-holding:hand_held"
      }
    },
    {
      "type": "ADD_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "hand-holding:holding_hand",
        "value": {
          "held_entity_id": "{event.payload.targetId}",
          "initiated": true
        }
      }
    },
    {
      "type": "ADD_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "hand-holding:hand_held",
        "value": {
          "holding_entity_id": "{event.payload.actorId}",
          "consented": true
        }
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} reaches and holds {context.targetName}'s hand."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_target_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": {
        "entity_ref": "actor"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": {
        "entity_ref": "target"
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
