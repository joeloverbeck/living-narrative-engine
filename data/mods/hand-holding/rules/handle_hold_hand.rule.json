{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_hold_hand",
  "comment": "Handles the 'hand-holding:hold_hand' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "hand-holding:event-is-action-hold-hand" },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "ESTABLISH_BIDIRECTIONAL_CLOSENESS",
      "parameters": {
        "actor_component_type": "hand-holding:holding_hand",
        "target_component_type": "hand-holding:hand_held",
        "actor_data": {
          "held_entity_id": "{event.payload.targetId}",
          "initiated": true
        },
        "target_data": {
          "holding_entity_id": "{event.payload.actorId}",
          "consented": true
        },
        "existing_component_types_to_clean": [
          "hand-holding:holding_hand",
          "hand-holding:hand_held"
        ]
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} reaches and holds {context.targetName}'s hand."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
