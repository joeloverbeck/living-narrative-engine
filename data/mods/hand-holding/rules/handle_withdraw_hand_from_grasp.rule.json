{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_withdraw_hand_from_grasp",
  "comment": "Handles the 'hand-holding:withdraw_hand_from_grasp' action by clearing hand-holding state from the held partner.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "hand-holding:event-is-action-withdraw-hand-from-grasp"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "hand-holding:hand_held",
        "result_variable": "actorHandHeldComponent"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "hand-holding:holding_hand",
        "result_variable": "targetHoldingComponent"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "and": [
            { "var": "context.actorHandHeldComponent" },
            { "var": "context.targetHoldingComponent" },
            {
              "==": [
                { "var": "context.actorHandHeldComponent.holding_entity_id" },
                { "var": "event.payload.targetId" }
              ]
            },
            {
              "==": [
                { "var": "context.targetHoldingComponent.held_entity_id" },
                { "var": "event.payload.actorId" }
              ]
            }
          ]
        },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "hand-holding:hand_held"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "hand-holding:holding_hand"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} withdraws their hand from {context.targetName}'s grasp."
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "action_target_general"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "locationId",
              "value": "{context.actorPosition.locationId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "targetId",
              "value": "{event.payload.targetId}"
            }
          },
          { "macro": "core:logSuccessAndEndTurn" }
        ],
        "else_actions": [
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "You pull back, but no one is holding your hand anymore."
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "parameters": {
              "eventType": "core:display_failed_action_result",
              "payload": {
                "message": "{context.logMessage}"
              }
            }
          },
          {
            "type": "END_TURN",
            "parameters": {
              "entityId": "{event.payload.actorId}",
              "success": false
            }
          }
        ]
      }
    }
  ]
}
