{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_let_go_of_hand",
  "comment": "Handles the 'hand-holding:let_go_of_hand' action by clearing hand-holding state and ending the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "hand-holding:event-is-action-let-go-of-hand"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "hand-holding:holding_hand",
        "result_variable": "actorHoldingComponent"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "hand-holding:hand_held",
        "result_variable": "targetHandHeldComponent"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "and": [
            { "var": "context.actorHoldingComponent" },
            {
              "==": [
                { "var": "context.actorHoldingComponent.held_entity_id" },
                { "var": "event.payload.targetId" }
              ]
            }
          ]
        },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "hand-holding:holding_hand"
            }
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "and": [
            { "var": "context.targetHandHeldComponent" },
            {
              "==": [
                { "var": "context.targetHandHeldComponent.holding_entity_id" },
                { "var": "event.payload.actorId" }
              ]
            }
          ]
        },
        "then_actions": [
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "hand-holding:hand_held"
            }
          }
        ]
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} lets go of {context.targetName}'s hand."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_target_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
