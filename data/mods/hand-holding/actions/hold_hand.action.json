    "primary": ["hand-holding:hand_held"]
  },
  "template": "hold {target}'s hand",
  "prerequisites": [],
  "visual": {
    "backgroundColor": "#2c0e37",
    "textColor": "#ffebf0",
    "hoverBackgroundColor": "#451952",
    "hoverTextColor": "#f3e5f5"
