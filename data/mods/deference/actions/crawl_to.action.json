{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "deference:crawl_to",
  "name": "Crawl To",
  "description": "Crawl submissively to the entity you are kneeling before, entering their personal space.",
  "targets": {
    "primary": {
      "scope": "positioning:entity_actor_is_kneeling_before",
      "placeholder": "target",
      "description": "The entity you are kneeling before"
    }
  },
  "required_components": {
    "actor": ["positioning:kneeling_before"]
  },
  "forbidden_components": {
    "actor": [
      "sitting-states:sitting_on",
      "bending-states:bending_over",
      "lying-states:lying_on",
      "straddling-states:straddling_waist",
      "hugging-states:being_hugged",
      "hugging-states:hugging",
      "personal-space-states:closeness",
      "physical-control-states:being_restrained",
      "physical-control-states:restraining",
      "positioning:fallen"
    ],
    "primary": [
      "positioning:kneeling_before",
      "lying-states:lying_on",
      "bending-states:bending_over"
    ]
  },
  "template": "crawl to {target}",
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "core:actor-mouth-available"
      },
      "failure_message": "You cannot do that while your mouth is engaged."
    }
  ],
  "visual": {
    "backgroundColor": "#1f2d3d",
    "textColor": "#f7f9ff",
    "hoverBackgroundColor": "#152133",
    "hoverTextColor": "#e8edf7"
  }
}
