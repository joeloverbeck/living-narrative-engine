{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "deference:kneel_before",
  "name": "Kneel Before",
  "description": "Kneel before another actor as a sign of respect, submission, or reverence. Requires you to be facing the target.",
  "targets": {
    "primary": {
      "scope": "positioning:actors_in_location_facing",
      "placeholder": "actor",
      "description": "The actor to kneel before"
    }
  },
  "required_components": {
    "actor": []
  },
  "forbidden_components": {
    "actor": [
      "positioning:biting_neck",
      "positioning:kneeling_before",
      "positioning:sitting_on",
      "bending-states:bending_over",
      "positioning:lying_down",
      "positioning:straddling_waist",
      "positioning:being_hugged",
      "positioning:hugging",
      "positioning:doing_complex_performance",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen"
    ],
    "primary": [
      "positioning:kneeling_before",
      "positioning:lying_down",
      "bending-states:bending_over"
    ]
  },
  "template": "kneel before {actor}",
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "core:actor-mouth-available"
      },
      "failure_message": "You cannot do that while your mouth is engaged."
    },
    {
      "logic": {
        "isActorLocationLit": ["actor"]
      },
      "failure_message": "It is too dark to kneel before anyone."
    }
  ],
  "visual": {
    "backgroundColor": "#1f2d3d",
    "textColor": "#f7f9ff",
    "hoverBackgroundColor": "#152133",
    "hoverTextColor": "#e8edf7"
  }
}
