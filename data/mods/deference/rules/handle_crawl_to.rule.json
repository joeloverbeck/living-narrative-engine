{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "deference_handle_crawl_to",
  "comment": "Handles the 'deference:crawl_to' action. Merges actor and target into a closeness circle while preserving the kneeling state.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "deference:event-is-action-crawl-to"
  },
  "actions": [
    {
      "type": "MERGE_CLOSENESS_CIRCLE",
      "comment": "Merge actor and target into a closeness circle, maintaining the kneeling state.",
      "parameters": {
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}"
      }
    },
    {
      "type": "GET_NAME",
      "comment": "Get actor name for the UI message.",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "comment": "Get location for perceptible event.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} crawls submissively to {context.targetName} until they're close."
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "comment": "Crawl to action with perspective-aware descriptions",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.logMessage}",
        "actor_description": "I crawl submissively to {context.targetName} until we're close.",
        "target_description": "{context.actorName} crawls submissively toward me until we're close.",
        "perception_type": "state_change_observable",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}",
        "alternate_descriptions": {
          "auditory": "I hear the sounds of shuffling and fabric dragging as someone crawls nearby."
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Display success message in UI",
      "parameters": {
        "eventType": "core:display_successful_action_result",
        "payload": {
          "message": "{context.logMessage}"
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Mark action as successful",
      "parameters": {
        "eventType": "core:action_success",
        "payload": {
          "actionId": "deference:crawl_to",
          "actorId": "{event.payload.actorId}",
          "targetId": "{event.payload.targetId}",
          "success": true
        }
      }
    },
    {
      "type": "END_TURN",
      "comment": "End turn after successful crawl to",
      "parameters": {
        "entityId": "{event.payload.actorId}",
        "success": true
      }
    }
  ]
}
