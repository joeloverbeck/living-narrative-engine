{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "breathing",
  "version": "1.0.0",
  "name": "Breathing System",
  "description": "Provides anatomy-driven oxygen tracking, hypoxia progression, and asphyxiation mechanics for drowning and strangulation scenarios.",
  "author": "Living Narrative Engine",
  "gameVersion": ">=0.0.1",
  "dependencies": [
    {
      "id": "anatomy",
      "version": "^1.0.0"
    },
    {
      "id": "breathing-states",
      "version": "^1.0.0"
    },
    {
      "id": "liquids-states",
      "version": "^1.0.0"
    }
  ],
  "content": {
    "libraries": ["respiratory.slot-library.json"],
    "components": [
      "hypoxic.component.json",
      "unconscious_anoxia.component.json"
    ],
    "entities": {
      "definitions": [],
      "instances": []
    },
    "rules": [
      "handle_oxygen_depletion.rule.json",
      "handle_oxygen_restoration.rule.json",
      "handle_hypoxia_progression.rule.json",
      "handle_anoxic_damage.rule.json"
    ],
    "events": [
      "hypoxia_started.event.json",
      "hypoxia_stopped.event.json",
      "anoxic_unconsciousness_started.event.json",
      "brain_damage_started.event.json"
    ]
  }
}
