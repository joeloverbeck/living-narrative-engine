{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "ranged",
  "version": "1.0.0",
  "name": "Ranged",
  "description": "Ranged combat actions such as throwing items at targets.",
  "actionPurpose": "Attack targets at a distance by throwing items from inventory.",
  "actionConsiderWhen": "Combat situations requiring ranged attacks, throwing weapons at enemies, or when melee engagement is not possible or desired.",
  "dependencies": [
    {
      "id": "items-core",
      "version": "1.0.0"
    },
    {
      "id": "recovery-states",
      "version": "^1.0.0"
    },
    {
      "id": "physical-control-states",
      "version": "^1.0.0"
    },
    {
      "id": "hugging-states",
      "version": "^1.0.0"
    },
    {
      "id": "sex-states",
      "version": "^1.0.0"
    },
    {
      "id": "skills",
      "version": "1.0.0"
    },
    {
      "id": "performances-states",
      "version": "^1.0.0"
    },
    {
      "id": "bending-states",
      "version": "^1.0.0"
    },
    {
      "id": "item-handling-states",
      "version": "^1.0.0"
    },
    {
      "id": "inventory",
      "version": "^1.0.0"
    }
  ],
  "content": {
    "scopes": [
      "throwable_items.scope"
    ],
    "actions": [
      "throw_item_at_target.action.json"
    ],
    "conditions": [
      "event-is-action-throw-item-at-target.condition.json"
    ],
    "macros": [
      "handleThrowCritical.macro.json",
      "handleThrowFumble.macro.json",
      "handleThrowHit.macro.json",
      "handleThrowMiss.macro.json"
    ],
    "rules": [
      "handle_throw_item_at_target.rule.json"
