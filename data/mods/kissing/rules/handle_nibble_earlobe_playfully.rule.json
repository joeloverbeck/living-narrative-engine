{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_nibble_earlobe_playfully",
  "comment": "Handles the 'kissing:nibble_earlobe_playfully' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "kissing:event-is-action-nibble-earlobe-playfully"
  },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} nibbles on {context.targetName}'s earlobe playfully."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
