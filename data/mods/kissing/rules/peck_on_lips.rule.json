{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_peck_on_lips",
  "comment": "Handles the 'kissing:peck_on_lips' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "kissing:event-is-action-peck_on_lips" },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} gives {context.targetName} a quick, affectionate peck on the lips."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
