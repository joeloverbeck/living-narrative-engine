{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_pull_back_in_revulsion",
  "comment": "Handles the 'kissing:pull_back_in_revulsion' action. Removes kissing state from both participants with negative reaction narrative.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "kissing:event-is-action-pull-back-in-revulsion"
  },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "UNLOCK_MOUTH_ENGAGEMENT",
      "parameters": {
        "actor_id": "{event.payload.actorId}"
      }
    },
    {
      "type": "UNLOCK_MOUTH_ENGAGEMENT",
      "parameters": {
        "actor_id": "{event.payload.targetId}"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "kissing:kissing"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "kissing:kissing"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "actor" }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "target" }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} pulls back from {context.targetName}'s kiss in revulsion, clearly disturbed by the intimate contact."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
