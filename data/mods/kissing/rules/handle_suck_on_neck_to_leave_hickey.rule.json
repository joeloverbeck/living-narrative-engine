{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_suck_on_neck_to_leave_hickey",
  "comment": "Handles the 'kissing:suck_on_neck_to_leave_hickey' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "kissing:event-is-action-suck-on-neck-to-leave-hickey"
  },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} has sucked on {context.targetName}'s neck, leaving a hickey."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
