{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_break_kiss_gently",
  "comment": "Handles the 'kissing:break_kiss_gently' action. Removes kissing state from both participants with gentle narrative.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "kissing:event-is-action-break-kiss-gently"
  },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "UNLOCK_MOUTH_ENGAGEMENT",
      "parameters": {
        "actor_id": "{event.payload.actorId}"
      }
    },
    {
      "type": "UNLOCK_MOUTH_ENGAGEMENT",
      "parameters": {
        "actor_id": "{event.payload.targetId}"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "kissing:kissing"
      }
    },
    {
      "type": "REMOVE_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "kissing:kissing"
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "actor" }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "target" }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} slowly and gently breaks the kiss with {context.targetName}, pulling back with a soft smile."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
