{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_suck_on_tongue",
  "comment": "Handles the 'kissing:suck_on_tongue' action. Maintains kissing state while providing tongue sucking narrative.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "kissing:event-is-action-suck-on-tongue"
  },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {}
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} has sucked on {context.targetName}'s tongue."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "successMessage",
        "value": "{context.actorName} sucks on {context.targetName}'s tongue."
      }
    },
    {
      "type": "GET_TIMESTAMP",
      "parameters": {
        "result_variable": "nowIso"
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "parameters": {
        "eventType": "core:perceptible_event",
        "payload": {
          "eventName": "core:perceptible_event",
          "locationId": "{context.locationId}",
          "descriptionText": "{context.logMessage}",
          "timestamp": "{context.nowIso}",
          "perceptionType": "{context.perceptionType}",
          "actorId": "{event.payload.actorId}",
          "targetId": "{context.targetId}",
          "involvedEntities": []
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "parameters": {
        "eventType": "core:display_successful_action_result",
        "payload": {
          "message": "{context.successMessage}"
        }
      }
    },
    {
      "type": "END_TURN",
      "parameters": {
        "entityId": "{event.payload.actorId}",
        "success": true
      }
    }
  ]
}
