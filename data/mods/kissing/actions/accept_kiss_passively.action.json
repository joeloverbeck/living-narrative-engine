{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "kissing:accept_kiss_passively",
  "name": "Accept kiss passively",
  "description": "Let them lead the kiss, not actively participating",
  "targets": "kissing:current_kissing_partner",
  "required_components": {
    "actor": ["kissing:kissing"]
  },
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "kissing:actor-is-kiss-receiver"
      },
      "failure_message": "You can only passively accept a kiss if you are not the one who initiated it."
    }
  ],
  "template": "accept {target}'s kiss passively",
  "visual": {
    "backgroundColor": "#ad1457",
    "textColor": "#ffffff",
    "hoverBackgroundColor": "#c2185b",
    "hoverTextColor": "#fce4ec"
  }
}
