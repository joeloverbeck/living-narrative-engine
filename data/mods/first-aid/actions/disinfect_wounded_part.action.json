{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "first-aid:disinfect_wounded_part",
  "name": "Disinfect Wounded Part",
  "description": "Disinfect a wounded body part using a tagged disinfectant liquid.",
  "template": "disinfect {target}'s {woundedBodyPart} with {disinfectant}",
  "generateCombinations": true,
  "required_components": {
    "actor": ["skills:medicine_skill", "inventory:inventory"]
  },
  "forbidden_components": {
    "actor": [
      "hugging-states:hugging",
      "sex-states:giving_blowjob",
      "performances-states:doing_complex_performance",
      "bending-states:bending_over",
      "physical-control-states:being_restrained",
      "physical-control-states:restraining",
      "recovery-states:fallen"
    ],
    "secondary": ["first-aid:disinfected"]
  },
  "targets": {
    "primary": {
      "scope": "core:actors_in_location",
      "placeholder": "target",
      "description": "Actor whose wound you are treating"
    },
    "secondary": {
      "scope": "first-aid:wounded_target_body_parts",
      "placeholder": "woundedBodyPart",
      "description": "Wounded body part to disinfect",
      "contextFrom": "primary"
    },
    "tertiary": {
      "scope": "items:disinfectant_liquids_in_inventory",
      "placeholder": "disinfectant",
      "description": "Disinfectant liquid container to use"
    }
  },
  "visual": {
    "backgroundColor": "#1b5e20",
    "textColor": "#e8f5e9",
    "hoverBackgroundColor": "#2e7d32",
    "hoverTextColor": "#ffffff"
  }
}
