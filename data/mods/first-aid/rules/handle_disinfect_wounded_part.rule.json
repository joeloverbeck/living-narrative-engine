{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_disinfect_wounded_part",
  "comment": "Applies disinfected status to the targeted wound, logs the action, refreshes descriptions, and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "first-aid:event-is-action-disinfect-wounded-part"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "primary",
        "result_variable": "targetName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "secondary",
        "result_variable": "partName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "tertiary",
        "result_variable": "disinfectantName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "ADD_COMPONENT",
      "parameters": {
        "entity_ref": "secondary",
        "component_type": "first-aid:disinfected",
        "value": {
          "appliedById": "{event.payload.actorId}",
          "sourceItemId": "{event.payload.tertiaryId}"
        }
      }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "primary" }
    },
    {
      "type": "REGENERATE_DESCRIPTION",
      "parameters": { "entity_ref": "secondary" }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} disinfects {context.targetName}'s wounded {context.partName} with {context.disinfectantName}."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.primaryId}"
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
