{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_forward_roll",
  "comment": "Handle Do Forward Roll action - tuck tightly and roll forward along the spine",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "gymnastics:event-is-action-do-forward-roll"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} completes a fluid forward roll, returning to a ready stance."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "type": "BURN_ENERGY",
      "comment": "Gymnastics burns energy at 3.0x base burn rate (strenuous activity).",
      "parameters": {
        "entity_ref": "actor",
        "activity_multiplier": 3.0
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
