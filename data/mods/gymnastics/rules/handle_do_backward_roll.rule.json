{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_backward_roll",
  "comment": "Handle Do Backward Roll action - roll backward through a tucked inversion",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "gymnastics:event-is-action-do-backward-roll"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} tucks down and rolls backward smoothly, rising centered and alert."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.self_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
