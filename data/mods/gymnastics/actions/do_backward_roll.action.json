{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "gymnastics:do_backward_roll",
  "name": "Do Backward Roll",
  "description": "Roll backward through a tucked inversion to recover facing forward",
  "targets": "none",
  "required_components": {
    "actor": ["gymnastics:is_gymnast", "skills:mobility_skill"]
  },
  "forbidden_components": {
    "actor": [
      "hugging-states:hugging",
      "physical-control-states:being_restrained",
      "physical-control-states:restraining"
    ]
  },
  "template": "do backward roll ({chance}% chance)",
  "prerequisites": [],
  "chanceBased": {
    "enabled": true,
    "contestType": "fixed_difficulty",
    "fixedDifficulty": 50,
    "formula": "linear",
    "actorSkill": {
      "component": "skills:mobility_skill",
      "property": "value",
      "default": 0
    },
    "bounds": {
      "min": 5,
      "max": 95
    },
    "outcomes": {
      "criticalSuccessThreshold": 5,
      "criticalFailureThreshold": 95
    }
  },
  "visual": {
    "backgroundColor": "#1a237e",
    "textColor": "#e8eaf6",
    "hoverBackgroundColor": "#283593",
    "hoverTextColor": "#ffffff"
  }
}
