{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "hugging:release_hug",
  "name": "Release Hug",
  "description": "Release someone from a tight embrace you initiated.",
  "targets": "hugging:hugged_by_actor",
  "required_components": {
    "actor": ["personal-space-states:closeness", "positioning:hugging"],
    "primary": ["positioning:being_hugged"]
  },
  "forbidden_components": {
    "actor": ["positioning:being_hugged"]
  },
  "template": "release {primary} from the hug",
  "prerequisites": [],
  "visual": {
    "backgroundColor": "#7d2a50",
    "textColor": "#fbeaf2",
    "hoverBackgroundColor": "#a13a6a",
    "hoverTextColor": "#fff3f9"
  }
}
