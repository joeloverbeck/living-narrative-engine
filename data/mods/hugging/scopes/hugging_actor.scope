// Scope restricting potential targets to actors currently hugging the acting entity
hugging:hugging_actor := personal-space:close_actors_facing_each_other_or_behind_target[{
  "and": [
    {"!!": {"var": "actor.components.hugging-states:being_hugged"}},
    {"!!": {"var": "entity.components.hugging-states:hugging"}},
    {"==": [
      {"var": "actor.components.hugging-states:being_hugged.hugging_entity_id"},
      {"var": "entity.id"}
    ]},
    {"==": [
      {"var": "entity.components.hugging-states:hugging.embraced_entity_id"},
      {"var": "actor.id"}
    ]}
  ]
}]
