{
  "$schema": "http://example.com/schemas/condition.schema.json",
  "id": "core:target-is-following-actor",
  "description": "Checks if the target's 'following' component points to the actor's ID.",
  "logic": {
    "==": [
      {
        "var": "target.components.core:following.leaderId"
      },
      {
        "var": "actor.id"
      }
    ]
  }
}
