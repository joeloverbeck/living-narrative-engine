{
  "$schema": "http://example.com/schemas/condition.schema.json",
  "id": "core:target-is-in-actors-follower-list",
  "description": "Checks if the target's ID is present in the actor's 'followers' list.",
  "logic": {
    "in": [
      {
        "var": "target.id"
      },
      {
        "var": "actor.components.core:leading.followers"
      }
    ]
  }
}