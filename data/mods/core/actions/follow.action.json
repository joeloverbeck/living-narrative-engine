{
  "$schema": "http://example.com/schemas/action-definition.schema.json",
  "id": "core:follow",
  "commandVerb": "follow",
  "name": "Follow",
  "description": "Commands your character to follow the specified target, becoming their companion and moving with them.",
  "target_domain": "environment",
  "template": "follow {target}",
  "prerequisites": [
    {
      "logic": {
        "==": [
          {
            "var": "actor.components.core:movement.locked"
          },
          false
        ]
      },
      "failure_message": "You are rooted and cannot move."
    },
    {
      "logic": {
        "and": [
          {
            "!!": {
              "var": "target.components.core:actor"
            }
          },
          {
            "!=": [
              {
                "var": "actor.id"
              },
              {
                "var": "target.id"
              }
            ]
          },
          {
            "==": [
              {
                "var": "actor.components.core:position.locationId"
              },
              {
                "var": "target.components.core:position.locationId"
              }
            ]
          },
          {
            "!": {
              "var": "actor.components.core:following"
            }
          },
          {
            "!==": [
              {
                "var": "actor.id"
              },
              {
                "var": "target.components.core:following.leaderId"
              }
            ]
          }
        ]
      },
      "failure_message": "You cannot follow that target right now."
    }
  ]
}
