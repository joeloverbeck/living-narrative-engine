{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "core:entity_spoke",
  "description": "Fired when an entity (player or AI) speaks as part of their turn.",
  "payloadSchema": {
    "title": "Core: Entity Spoke Payload",
    "description": "Payload for the core:entity_spoke event.",
    "type": "object",
    "properties": {
      "entityId": {
        "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/namespacedId",
        "description": "The ID of the entity that spoke."
      },
      "speechContent": {
        "type": "string",
        "description": "The text content of what the entity said."
      },
      "thoughts": {
        "type": "string",
        "description": "Internal monologue of the entity.",
        "minLength": 1
      },
      "notes": {
        "type": "array",
        "description": "Structured notes data for processing and UI display.",
        "items": {
          "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/structuredNote"
        }
      },
      "suppressDisplay": {
        "type": "boolean",
        "description": "If true, skip UI display bubbles while still logging perceptible events.",
        "default": false
      }
    },
    "required": ["entityId", "speechContent"],
    "additionalProperties": false
  }
}
