{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "core:entity_spoke",
  "description": "Fired when an entity (player or AI) speaks as part of their turn.",
  "payloadSchema": {
    "title": "Core: Entity Spoke Payload",
    "description": "Payload for the core:entity_spoke event.",
    "type": "object",
    "properties": {
      "entityId": {
        "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/namespacedId",
        "description": "The ID of the entity that spoke."
      },
      "speechContent": {
        "type": "string",
        "description": "The text content of what the entity said."
      },
      "thoughts": {
        "type": "string",
        "description": "Internal monologue of the entity.",
        "minLength": 1
      },
      "notesRaw": {
        "description": "Raw structured notes data for processing and UI display.",
        "oneOf": [
          {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "text": { "type": "string" },
                "subject": { "type": "string" },
                "subjectType": { "type": "string" },
                "context": { "type": "string" },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "timestamp": { "type": "string" }
              },
              "required": ["text"],
              "additionalProperties": false
            }
          },
          {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "subject": { "type": "string" },
              "subjectType": { "type": "string" },
              "context": { "type": "string" },
              "tags": {
                "type": "array",
                "items": { "type": "string" }
              },
              "timestamp": { "type": "string" }
            },
            "required": ["text"],
            "additionalProperties": false
          },
          { "type": "string" }
        ]
      }
    },
    "required": ["entityId", "speechContent"],
    "additionalProperties": false
  }
}
