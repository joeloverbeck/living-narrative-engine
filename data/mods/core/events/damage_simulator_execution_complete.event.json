{
  "$schema": "schema://living-narrative-engine/event.schema.json",
  "id": "core:damage_simulator_execution_complete",
  "description": "Fired when damage execution completes in the damage simulator.",
  "payloadSchema": {
    "type": "object",
    "required": ["entityId", "results"],
    "properties": {
      "entityId": {
        "type": "string",
        "description": "The ID of the entity that received damage."
      },
      "results": {
        "type": "array",
        "description": "Array of damage application results."
      }
    },
    "additionalProperties": false
  }
}
