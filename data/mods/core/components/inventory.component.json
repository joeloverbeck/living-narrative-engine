{
  "$schema": "../../schemas/component.schema.json",
  "id": "core:inventory",
  "name": "Inventory",
  "description": "Component for tracking items carried by an entity",
  "dataSchema": {
    "type": "object",
    "properties": {
      "items": {
        "type": "array",
        "description": "List of items in inventory",
        "items": {
          "type": "string",
          "description": "Entity ID of an item"
        },
        "default": []
      },
      "maxSize": {
        "type": "number",
        "description": "Maximum number of items",
        "minimum": 0,
        "default": 20
      }
    },
    "required": ["items"],
    "additionalProperties": false
  }
}