{
  "$schema": "http://example.com/schemas/component.schema.json",
  "id": "core:goals",
  "description": "Stores an array of goals (each with non-empty text and an ISO-8601 timestamp) on an entity.",
  "dataSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "goals": {
        "type": "array",
        "minItems": 0,
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1,
              "description": "The goal content; must be a non-empty string."
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "When the goal was created (ISO 8601 date-time)."
            }
          },
          "required": ["text", "timestamp"],
          "additionalProperties": false
        }
      }
    },
    "required": ["goals"],
    "additionalProperties": false
  }
}
