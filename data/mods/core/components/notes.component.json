{
  "$schema": "http://example.com/schemas/component-definition.schema.json",
  "id": "core:notes",
  "description": "Stores an array of notes (text + ISO-8601 timestamp) on an entity.",
  "dataSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "notes": {
        "type": "array",
        "minItems": 0,
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "minLength": 1,
              "description": "The note content."
            },
            "timestamp": {
              "type": "string",
              "format": "date-time",
              "description": "When the note was created."
            }
          },
          "required": ["text", "timestamp"],
          "additionalProperties": false
        }
      }
    },
    "required": ["notes"],
    "additionalProperties": false
  },
  "resolveFields": []
}
