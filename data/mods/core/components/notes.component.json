{
  "$schema": "http://example.com/schemas/component.schema.json",
  "id": "core:notes",
  "description": "Stores an array of notes with optional structured context (subject, context, tags) on an entity.",
  "dataSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "notes": {
        "type": "array",
        "minItems": 0,
        "items": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The note content."
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time",
                  "description": "When the note was created."
                }
              },
              "required": ["text"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The note content."
                },
                "subject": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Primary subject of the note (entity, location, concept)."
                },
                "context": {
                  "type": "string",
                  "description": "Where/how this was observed (optional)."
                },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Additional categorization tags (optional)."
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time",
                  "description": "When the note was created."
                }
              },
              "required": ["text", "subject"],
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "required": ["notes"],
    "additionalProperties": false
  }
}
