{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_developpe_a_la_seconde",
  "comment": "Handle Do Développé à la Seconde action - unfold the leg slowly to second position",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "ballet:event-is-action-do-developpe-a-la-seconde"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} slowly unfolds their leg to the side with perfect control"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.self_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
