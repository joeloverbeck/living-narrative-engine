{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_entrechat_six",
  "comment": "Handle Do Entrechat Six action - execute vertical jump with six leg beats",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "ballet:event-is-action-do-entrechat-six"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} springs into the air with legs beating rapidly in precise crossing patterns"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
