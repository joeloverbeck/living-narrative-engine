{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_pirouette_en_dehors_from_fourth",
  "comment": "Handle Do Pirouette en Dehors from Fourth action - execute outward turning pirouette",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "ballet:event-is-action-do-pirouette-en-dehors-from-fourth"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} prepares in fourth position and executes a clean turning pirouette"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.self_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
