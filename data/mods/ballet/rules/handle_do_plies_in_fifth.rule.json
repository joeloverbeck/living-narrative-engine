{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_do_plies_in_fifth",
  "comment": "Handle Do Pliés in Fifth action - perform classical pliés in fifth position",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "ballet:event-is-action-do-plies-in-fifth"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{actor} bends gracefully in fifth position, demonstrating perfect turnout and alignment"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
