{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_hold_arabesque_penche",
  "comment": "Handle Hold Arabesque Pench√© action - maintain arabesque position with controlled forward hinge",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "ballet:event-is-action-hold-arabesque-penche"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} tilts forward while raising their back leg into a dramatic arabesque"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "action_self_general"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": null
      }
    },
    {
      "type": "BURN_ENERGY",
      "comment": "Ballet burns energy at 3.0x base burn rate (strenuous activity).",
      "parameters": {
        "entity_ref": "actor",
        "activity_multiplier": 3.0
      }
    },
    {
      "macro": "core:logSuccessAndEndTurn"
    }
  ]
}
