{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "ballet:event-is-action-do-developpe-a-la-seconde",
  "description": "Evaluates to true if the event is attempting the Do Développé à la Seconde action",
  "logic": {
    "and": [
      {
        "==": [
          {
            "var": "actionId"
          },
          "ballet:do_developpe_a_la_seconde"
        ]
      }
    ]
  }
}
