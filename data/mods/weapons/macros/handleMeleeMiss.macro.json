{
  "$schema": "schema://living-narrative-engine/macro.schema.json",
  "id": "weapons:handleMeleeMiss",
  "description": "Handles FAILURE outcome for melee weapon attacks - attack fails to connect. Expects context variables: actorName, targetName, weaponName, attackVerbPast, attackVerb, actorPosition.",
  "actions": [
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.failureMessage}",
        "perception_type": "action_target_general",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.secondaryId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.failureMessage}"
      }
    },
    {
      "macro": "core:logFailureOutcomeAndEndTurn"
    }
  ]
}
