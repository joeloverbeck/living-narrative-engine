{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "locks:blocker-is-locked",
  "description": "True when the blocker is locked and has the mechanisms:openable component",
  "logic": {
    "and": [
      {
        "condition_ref": "locks:blocker-has-openable"
      },
      {
        "==": [
          {
            "or": [
              {
                "var": "entity.blocker.components.mechanisms:openable.isLocked"
              },
              {
                "get_component_value": [
                  {
                    "var": "entity.blocker"
                  },
                  "mechanisms:openable",
                  "isLocked"
                ]
              }
            ]
          },
          true
        ]
      }
    ]
  }
}
