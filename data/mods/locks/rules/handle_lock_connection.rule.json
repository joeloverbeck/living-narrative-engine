{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_lock_connection",
  "comment": "Handles locks:lock_connection action with key validation and perception logging.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "locks:event-is-action-lock-connection"
  },
  "actions": [
    {
      "type": "QUERY_COMPONENT",
      "comment": "Load lock state for the target blocker.",
      "parameters": {
        "entity_ref": "target",
        "component_type": "locks:openable",
        "result_variable": "openable",
        "missing_value": null
      }
    },
    {
      "type": "IF",
      "comment": "Fail fast if target is not lockable.",
      "parameters": {
        "condition": { "!": { "var": "context.openable" } },
        "then_actions": [
          {
            "type": "DISPATCH_EVENT",
            "comment": "Surface failure to UI.",
            "parameters": {
              "eventType": "core:display_failed_action_result",
              "payload": {
                "message": "That connection cannot be locked."
              }
            }
          },
          {
            "type": "END_TURN",
            "parameters": {
              "entityId": "{event.payload.actorId}",
              "success": false,
              "error": {
                "message": "Target is not lockable."
              }
            }
          }
        ],
        "else_actions": [
          {
            "type": "QUERY_COMPONENT",
            "comment": "Fetch actor position for perception logging.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "core:position",
              "result_variable": "actorPosition"
            }
          },
          {
            "type": "QUERY_COMPONENT",
            "comment": "Read actor inventory for key validation.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "items:inventory",
              "result_variable": "actorInventory"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "keyId",
              "value": "{event.payload.secondaryId}"
            }
          },
          {
            "type": "IF",
            "comment": "Reject if key is missing or mismatched.",
            "parameters": {
              "condition": {
                "or": [
                  { "!": { "var": "context.keyId" } },
                  {
                    "!=": [
                      { "var": "context.keyId" },
                      { "var": "context.openable.requiredKeyId" }
                    ]
                  },
                  {
                    "!": {
                      "in": [
                        { "var": "context.keyId" },
                        { "var": "context.actorInventory.items" }
                      ]
                    }
                  }
                ]
              },
              "then_actions": [
                {
                  "type": "SET_VARIABLE",
                  "parameters": {
                    "variable_name": "logMessage",
                    "value": "{event.payload.actorId} tries to lock {event.payload.targetId}, but needs the matching key."
                  }
                },
                {
                  "type": "DISPATCH_PERCEPTIBLE_EVENT",
                  "comment": "Announce failed lock due to missing key.",
                  "parameters": {
                    "location_id": "{context.actorPosition.locationId}",
                    "description_text": "{context.logMessage}",
                    "perception_type": "connection_lock_failed",
                    "actor_id": "{event.payload.actorId}",
                    "target_id": "{event.payload.targetId}",
                    "involved_entities": [
                      "{event.payload.secondaryId}"
                    ],
                    "contextual_data": {
                      "reason": "missing_or_wrong_key"
                    }
                  }
                },
                {
                  "type": "DISPATCH_EVENT",
                  "comment": "Surface failure to UI.",
                  "parameters": {
                    "eventType": "core:display_failed_action_result",
                    "payload": {
                      "message": "{context.logMessage}"
                    }
                  }
                },
                {
                  "type": "END_TURN",
                  "parameters": {
                    "entityId": "{event.payload.actorId}",
                    "success": false,
                    "error": {
                      "message": "Missing or incorrect key."
                    }
                  }
                }
              ],
              "else_actions": [
                {
                  "type": "IF",
                  "comment": "Guard against already locked state.",
                  "parameters": {
                    "condition": {
                      "==": [
                        { "var": "context.openable.isLocked" },
                        true
                      ]
                    },
                    "then_actions": [
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "{event.payload.targetId} is already locked."
                        }
                      },
                      {
                        "type": "DISPATCH_PERCEPTIBLE_EVENT",
                        "comment": "Announce no-op lock attempt.",
                        "parameters": {
                          "location_id": "{context.actorPosition.locationId}",
                          "description_text": "{context.logMessage}",
                          "perception_type": "connection_lock_failed",
                          "actor_id": "{event.payload.actorId}",
                          "target_id": "{event.payload.targetId}",
                          "involved_entities": [
                            "{event.payload.secondaryId}"
                          ],
                          "contextual_data": {
                            "reason": "already_locked"
                          }
                        }
                      },
                      {
                        "type": "DISPATCH_EVENT",
                        "parameters": {
                          "eventType": "core:display_failed_action_result",
                          "payload": {
                            "message": "{context.logMessage}"
                          }
                        }
                      },
                      {
                        "type": "END_TURN",
                        "parameters": {
                          "entityId": "{event.payload.actorId}",
                          "success": false,
                          "error": {
                            "message": "Blocker already locked."
                          }
                        }
                      }
                    ],
                    "else_actions": [
                      {
                        "type": "MODIFY_COMPONENT",
                        "comment": "Flip lock state to locked.",
                        "parameters": {
                          "entity_ref": "target",
                          "component_type": "locks:openable",
                          "field": "isLocked",
                          "mode": "set",
                          "value": true
                        }
                      },
                      {
                        "type": "MODIFY_COMPONENT",
                        "comment": "Record last actor to change the lock.",
                        "parameters": {
                          "entity_ref": "target",
                          "component_type": "locks:openable",
                          "field": "lastChangedBy",
                          "mode": "set",
                          "value": "{event.payload.actorId}"
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "comment": "Prepare log message for macro.",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "{event.payload.actorId} locks {event.payload.targetId}."
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "perceptionType",
                          "value": "connection_locked"
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "locationId",
                          "value": "{context.actorPosition.locationId}"
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "targetId",
                          "value": "{event.payload.targetId}"
                        }
                      },
                      { "macro": "core:logSuccessAndEndTurn" }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
