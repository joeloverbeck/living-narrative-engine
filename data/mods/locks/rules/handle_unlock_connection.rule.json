{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_unlock_connection",
  "comment": "Handles locks:unlock_connection action with key validation and perception logging.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "locks:event-is-action-unlock-connection"
  },
  "actions": [
    {
      "type": "QUERY_COMPONENT",
      "comment": "Load lock state for the target blocker.",
      "parameters": {
        "entity_ref": "target",
        "component_type": "mechanisms:openable",
        "result_variable": "openable",
        "missing_value": null
      }
    },
    {
      "type": "IF",
      "comment": "Fail fast if target is not lockable.",
      "parameters": {
        "condition": {
          "!": {
            "var": "context.openable"
          }
        },
        "then_actions": [
          {
            "type": "DISPATCH_EVENT",
            "comment": "Surface failure to UI.",
            "parameters": {
              "eventType": "core:display_failed_action_result",
              "payload": {
                "message": "That connection cannot be unlocked."
              }
            }
          },
          {
            "type": "END_TURN",
            "parameters": {
              "entityId": "{event.payload.actorId}",
              "success": false,
              "error": {
                "message": "Target is not lockable."
              }
            }
          }
        ],
        "else_actions": [
          {
            "type": "QUERY_COMPONENT",
            "comment": "Fetch actor position for perception logging.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "core:position",
              "result_variable": "actorPosition"
            }
          },
          {
            "type": "QUERY_COMPONENT",
            "comment": "Read actor inventory for key validation.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "items:inventory",
              "result_variable": "actorInventory"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "key",
              "value": "{event.payload.secondaryId}"
            }
          },
          {
            "type": "IF",
            "comment": "Reject if key is missing or mismatched.",
            "parameters": {
              "condition": {
                "or": [
                  {
                    "!": {
                      "var": "context.key"
                    }
                  },
                  {
                    "!=": [
                      {
                        "var": "context.key"
                      },
                      {
                        "var": "context.openable.requiredKeyId"
                      }
                    ]
                  },
                  {
                    "!": {
                      "in": [
                        {
                          "var": "context.key"
                        },
                        {
                          "var": "context.actorInventory.items"
                        }
                      ]
                    }
                  }
                ]
              },
              "then_actions": [
                {
                  "type": "SET_VARIABLE",
                  "parameters": {
                    "variable_name": "logMessage",
                    "value": "{actor} tries to unlock {target}, but needs the matching key."
                  }
                },
                {
                  "type": "DISPATCH_PERCEPTIBLE_EVENT",
                  "comment": "Announce failed unlock due to missing key with perspective-aware descriptions.",
                  "parameters": {
                    "location_id": "{context.actorPosition.locationId}",
                    "description_text": "{context.logMessage}",
                    "actor_description": "I try to unlock {target}, but I don't have the matching key.",
                    "perception_type": "error.action_failed",
                    "actor_id": "{event.payload.actorId}",
                    "target_id": "{event.payload.targetId}",
                                        "alternate_descriptions": {
                      "auditory": "I hear a frustrated attempt to unlock something."
                    },
                    "involved_entities": [
                      "{event.payload.secondaryId}"
                    ],
                    "contextual_data": {
                      "reason": "missing_or_wrong_key"
                    }
                  }
                },
                {
                  "type": "DISPATCH_EVENT",
                  "comment": "Surface failure to UI.",
                  "parameters": {
                    "eventType": "core:display_failed_action_result",
                    "payload": {
                      "message": "{context.logMessage}"
                    }
                  }
                },
                {
                  "type": "END_TURN",
                  "parameters": {
                    "entityId": "{event.payload.actorId}",
                    "success": false,
                    "error": {
                      "message": "Missing or incorrect key."
                    }
                  }
                }
              ],
              "else_actions": [
                {
                  "type": "IF",
                  "comment": "Guard against already unlocked state.",
                  "parameters": {
                    "condition": {
                      "==": [
                        {
                          "var": "context.openable.isLocked"
                        },
                        false
                      ]
                    },
                    "then_actions": [
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "{target} is already unlocked."
                        }
                      },
                      {
                        "type": "DISPATCH_PERCEPTIBLE_EVENT",
                        "comment": "Announce no-op unlock attempt with perspective-aware descriptions.",
                        "parameters": {
                          "location_id": "{context.actorPosition.locationId}",
                          "description_text": "{context.logMessage}",
                          "actor_description": "I check {target}, but it's already unlocked.",
                          "perception_type": "error.action_failed",
                          "actor_id": "{event.payload.actorId}",
                          "target_id": "{event.payload.targetId}",
                                                    "alternate_descriptions": {
                            "auditory": "I hear someone checking a lock nearby."
                          },
                          "involved_entities": [
                            "{event.payload.secondaryId}"
                          ],
                          "contextual_data": {
                            "reason": "already_unlocked"
                          }
                        }
                      },
                      {
                        "type": "DISPATCH_EVENT",
                        "parameters": {
                          "eventType": "core:display_failed_action_result",
                          "payload": {
                            "message": "{context.logMessage}"
                          }
                        }
                      },
                      {
                        "type": "END_TURN",
                        "parameters": {
                          "entityId": "{event.payload.actorId}",
                          "success": false,
                          "error": {
                            "message": "Blocker already unlocked."
                          }
                        }
                      }
                    ],
                    "else_actions": [
                      {
                        "type": "MODIFY_COMPONENT",
                        "comment": "Flip lock state to unlocked.",
                        "parameters": {
                          "entity_ref": "target",
                          "component_type": "mechanisms:openable",
                          "field": "isLocked",
                          "mode": "set",
                          "value": false
                        }
                      },
                      {
                        "type": "MODIFY_COMPONENT",
                        "comment": "Record last actor to change the lock.",
                        "parameters": {
                          "entity_ref": "target",
                          "component_type": "mechanisms:openable",
                          "field": "lastChangedBy",
                          "mode": "set",
                          "value": "{event.payload.actorId}"
                        }
                      },
                      {
                        "type": "GET_NAME",
                        "comment": "Get actor name for log.",
                        "parameters": {
                          "entity_ref": "actor",
                          "result_variable": "actorName"
                        }
                      },
                      {
                        "type": "GET_NAME",
                        "comment": "Get target name for log.",
                        "parameters": {
                          "entity_ref": "target",
                          "result_variable": "targetName"
                        }
                      },
                      {
                        "type": "GET_NAME",
                        "comment": "Get key name for log.",
                        "parameters": {
                          "entity_ref": "{event.payload.secondaryId}",
                          "result_variable": "keyName"
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "comment": "Prepare log message for macro.",
                        "parameters": {
                          "variable_name": "logMessage",
                          "value": "{context.actorName} unlocks {context.targetName} with {context.keyName}."
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "perceptionType",
                          "value": "connection.unlock"
                        }
                      },
                      {
                        "type": "SET_VARIABLE",
                        "parameters": {
                          "variable_name": "locationId",
                          "value": "{context.actorPosition.locationId}"
                        }
                      },
                      {
                        "type": "DISPATCH_PERCEPTIBLE_EVENT",
                        "comment": "Unlock action with perspective-aware descriptions.",
                        "parameters": {
                          "location_id": "{context.actorPosition.locationId}",
                          "description_text": "{context.logMessage}",
                          "actor_description": "I unlock {context.targetName} with {context.keyName}, feeling the mechanism release.",
                          "perception_type": "connection.unlock",
                          "actor_id": "{event.payload.actorId}",
                          "target_id": "{event.payload.targetId}",
                                                    "alternate_descriptions": {
                            "auditory": "I hear the click of a lock disengaging nearby.",
                            "tactile": "I sense the vibration of a mechanism unlocking."
                          }
                        }
                      },
                      {
                        "type": "DISPATCH_EVENT",
                        "comment": "Display success message in UI.",
                        "parameters": {
                          "eventType": "core:display_successful_action_result",
                          "payload": {
                            "message": "{context.logMessage}"
                          }
                        }
                      },
                      {
                        "type": "END_TURN",
                        "comment": "End turn after successful unlock.",
                        "parameters": {
                          "entityId": "{event.payload.actorId}",
                          "success": true
                        }
                      }
                    ]
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
