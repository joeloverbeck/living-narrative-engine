{
  "rule_id": "ui_set_title_from_event",
  "event_type": "textUI:set_title",
  "condition": {
    "and": [
      {
        "!=": [
          {
            "var": "event.payload"
          },
          null
        ]
      },
      {
        "!=": [
          {
            "var": "event.payload.text"
          },
          null
        ]
      }
    ]
  },
  "actions": [
    {
      "type": "MODIFY_DOM_ELEMENT",
      "comment": "Update the main H1 title element's text content based on the event payload.",
      "parameters": {
        "selector": "#title-element",
        "property": "textContent",
        "value": "{event.payload.text}"
      }
    }
  ]
}