{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:facial_aesthetic",
  "description": "Describes the overall aesthetic quality or attractiveness of a face",
  "dataSchema": {
    "type": "object",
    "properties": {
      "value": {
        "type": "string",
        "description": "The facial aesthetic quality",
        "enum": [
          "beautiful",
          "attractive",
          "pretty",
          "handsome",
          "cute",
          "pleasant",
          "plain",
          "unremarkable",
          "homely",
          "unattractive",
          "hideous",
          "grotesque"
        ]
      }
    },
    "required": ["value"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid facial aesthetic: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Facial aesthetic is required",
      "invalidType": "Invalid type for facial aesthetic: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
