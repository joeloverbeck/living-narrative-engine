{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:color_extended",
  "description": "Extended color descriptors including shades and special colors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "color": {
        "type": "string",
        "description": "The extended color descriptor",
        "enum": [
          "amber",
          "blonde",
          "brunette",
          "nude",
          "raven-black",
          "auburn",
          "silver",
          "cobalt",
          "hazel",
          "violet",
          "navy",
          "deep-navy",
          "pale-blue",
          "sand-beige",
          "indigo",
          "taupe",
          "smoke-black",
          "bronze",
          "dark-olive",
          "cream"
        ],
        "default": "raven-black"
      }
    },
    "required": ["color"],
    "additionalProperties": false
  }
}
