{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:visual_capability",
  "description": "Describes the visual sensing capabilities of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "capability": {
        "type": "string",
        "description": "The visual capability",
        "enum": [
          "normal",
          "compound-multidirectional",
          "360-degree-vision",
          "telescopic",
          "thermal"
        ],
        "default": "normal"
      }
    },
    "required": ["capability"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid visual capability: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Visual capability is required",
      "invalidType": "Invalid type for visual capability: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
