{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:color_basic",
  "description": "Basic color descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "color": {
        "type": "string",
        "description": "The basic color",
        "enum": [
          "red",
          "blue",
          "green",
          "yellow",
          "orange",
          "purple",
          "brown",
          "black",
          "white",
          "gray",
          "pink"
        ],
        "default": "black"
      }
    },
    "required": ["color"],
    "additionalProperties": false
  }
}
