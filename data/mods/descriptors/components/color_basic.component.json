{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:color_basic",
  "description": "Basic color descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "color": {
        "type": "string",
        "description": "The basic color",
        "enum": [
          "red",
          "blue",
          "green",
          "yellow",
          "orange",
          "purple",
          "brown",
          "black",
          "white",
          "gray",
          "pink"
        ],
        "default": "black"
      }
    },
    "required": ["color"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid color: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Color is required",
      "invalidType": "Invalid type for color: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
