{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:length_hair",
  "description": "Hair-specific length descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "length": {
        "type": "string",
        "description": "The hair length",
        "enum": ["bald", "buzz", "short", "medium", "long", "very-long"],
        "default": "medium"
      }
    },
    "required": ["length"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid hair length: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Hair length is required",
      "invalidType": "Invalid type for hair length: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
