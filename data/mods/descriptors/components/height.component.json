{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:height",
  "description": "Height descriptor for overall body stature",
  "dataSchema": {
    "type": "object",
    "properties": {
      "height": {
        "type": "string",
        "description": "The height category",
        "enum": [
          "microscopic",
          "minuscule",
          "tiny",
          "petite",
          "short",
          "average",
          "tall",
          "very-tall",
          "gigantic",
          "colossal",
          "titanic"
        ],
        "default": "average"
      }
    },
    "required": ["height"],
    "additionalProperties": false
  }
}
