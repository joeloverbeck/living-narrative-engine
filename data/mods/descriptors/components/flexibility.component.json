{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:flexibility",
  "description": "Describes the range of motion and flexibility of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "flexibility": {
        "type": "string",
        "description": "The flexibility or range of motion",
        "enum": [
          "rigid",
          "average",
          "highly-flexible",
          "extremely-flexible",
          "retractable"
        ],
        "default": "average"
      }
    },
    "required": ["flexibility"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid flexibility: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Flexibility is required",
      "invalidType": "Invalid type for flexibility: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
