{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:animation",
  "description": "Describes the movement or animation characteristics of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "animation": {
        "type": "string",
        "description": "The animation or movement pattern",
        "enum": [
          "static",
          "pulsating",
          "pulsating-morphing",
          "unblinking",
          "unblinking-independent-motion",
          "involuntary-twitching",
          "constantly-drooling",
          "slowly-gaping",
          "rhythmic-pulsation"
        ],
        "default": "static"
      }
    },
    "required": ["animation"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid animation: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Animation is required",
      "invalidType": "Invalid type for animation: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
