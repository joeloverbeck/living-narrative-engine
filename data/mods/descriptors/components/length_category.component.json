{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:length_category",
  "description": "General length categories applicable to various features",
  "dataSchema": {
    "type": "object",
    "properties": {
      "length": {
        "type": "string",
        "description": "The length category",
        "enum": [
          "very-short",
          "short",
          "average",
          "medium",
          "long",
          "very-long",
          "extremely-long",
          "immense"
        ],
        "default": "average"
      }
    },
    "required": ["length"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid length category: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Length category is required",
      "invalidType": "Invalid type for length category: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
