{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:size_category",
  "description": "General size categories applicable to various objects and features",
  "dataSchema": {
    "type": "object",
    "properties": {
      "size": {
        "type": "string",
        "description": "The general size category",
        "enum": [
          "tiny",
          "small",
          "medium",
          "large",
          "huge",
          "massive",
          "colossal",
          "enormous",
          "gigantic",
          "titanic"
        ],
        "default": "medium"
      }
    },
    "required": [
      "size"
    ],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid size category: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Size Category is required",
      "invalidType": "Invalid type for size category: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}