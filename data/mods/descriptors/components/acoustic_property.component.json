{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:acoustic_property",
  "description": "Describes the acoustic or sound-related properties of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "property": {
        "type": "string",
        "description": "The acoustic property",
        "enum": [
          "normal",
          "subsonic-emission",
          "ultrasonic-emission",
          "resonant",
          "dampening"
        ],
        "default": "normal"
      }
    },
    "required": ["property"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid acoustic property: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Acoustic property is required",
      "invalidType": "Invalid type for acoustic property: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
