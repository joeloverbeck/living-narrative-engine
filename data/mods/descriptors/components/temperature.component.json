{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:temperature",
  "description": "Describes the temperature characteristics of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "temperature": {
        "type": "string",
        "description": "The temperature characteristic",
        "enum": [
          "normal",
          "cold",
          "hot",
          "unnaturally-warm",
          "variable"
        ],
        "default": "normal"
      }
    },
    "required": ["temperature"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid temperature: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Temperature is required",
      "invalidType": "Invalid type for temperature: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
