{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:shape_general",
  "description": "General shape descriptors applicable to various objects",
  "dataSchema": {
    "type": "object",
    "properties": {
      "shape": {
        "type": "string",
        "description": "The general shape",
        "enum": [
          "angular",
          "bulbous",
          "conical",
          "curved",
          "cylindrical",
          "elongated",
          "oval",
          "round",
          "square",
          "tapered"
        ],
        "default": "round"
      }
    },
    "required": ["shape"],
    "additionalProperties": false
  }
}
