{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:secretion",
  "description": "Describes fluids or substances secreted by a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "secretion": {
        "type": "string",
        "description": "The type of secretion produced",
        "enum": [
          "none",
          "acidic-mucus",
          "corrosive-saliva",
          "viscous-slime",
          "viscous-digestive-fluid"
        ],
        "default": "none"
      }
    },
    "required": ["secretion"],
    "additionalProperties": false
  }
}
