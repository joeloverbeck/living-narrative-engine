{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:texture",
  "description": "Describes the surface texture of an object",
  "dataSchema": {
    "type": "object",
    "properties": {
      "texture": {
        "type": "string",
        "description": "The surface texture",
        "enum": [
          "bumpy",
          "coarse",
          "croc-embossed",
          "glossy",
          "matte",
          "rib-knit",
          "rough",
          "rugged",
          "scarred",
          "silky",
          "smooth",
          "terry",
          "velvety"
        ],
        "default": "smooth"
      }
    },
    "required": ["texture"],
    "additionalProperties": false
  }
}
