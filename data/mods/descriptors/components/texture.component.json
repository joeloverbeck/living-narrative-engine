{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:texture",
  "description": "Describes the surface texture of an object",
  "dataSchema": {
    "type": "object",
    "properties": {
      "texture": {
        "type": "string",
        "description": "The surface texture",
        "enum": [
          "bumpy",
          "burnished",
          "chitinous",
          "chipped",
          "coarse",
          "concentric-teeth",
          "cracked",
          "croc-embossed",
          "faceted",
          "feathered",
          "felted",
          "fleece",
          "fleshy",
          "fuzzy",
          "glossy",
          "leathery",
          "lipless-slit",
          "matte",
          "mucous",
          "nodular-receptors",
          "oiled",
          "padded",
          "pale-clammy",
          "patched",
          "quilted",
          "rib-knit",
          "ridged",
          "rough",
          "rugged",
          "scaled",
          "scarred",
          "serrated-edges",
          "silky",
          "slick",
          "slimy",
          "smooth",
          "smooth-muscular",
          "smooth-segmented",
          "soft",
          "suckered",
          "sweat-stained",
          "terry",
          "translucent",
          "translucent-slick",
          "translucent-veined",
          "velvety",
          "waxed",
          "webbed-clawed",
          "worn"
        ],
        "default": "smooth"
      }
    },
    "required": ["texture"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid texture: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Texture is required",
      "invalidType": "Invalid type for texture: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
