{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:firmness",
  "description": "Describes the firmness or rigidity of an object or body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "firmness": {
        "type": "string",
        "description": "The firmness level",
        "enum": ["soft", "pliant", "firm", "hard", "rigid"],
        "default": "firm"
      }
    },
    "required": ["firmness"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid firmness: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Firmness is required",
      "invalidType": "Invalid type for firmness: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
