{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:hair_style",
  "description": "Hair style descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "style": {
        "type": "string",
        "description": "The hair style",
        "enum": [
          "straight",
          "wavy",
          "curly",
          "kinky",
          "braided",
          "ponytail",
          "ponytails",
          "bun",
          "dreadlocks",
          "mohawk"
        ],
        "default": "straight"
      }
    },
    "required": ["style"],
    "additionalProperties": false
  }
}
