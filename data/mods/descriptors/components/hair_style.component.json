{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:hair_style",
  "description": "Hair style descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "style": {
        "type": "string",
        "description": "The hair style",
        "enum": [
          "straight",
          "wavy",
          "tousled",
          "curly",
          "kinky",
          "braided",
          "ponytail",
          "ponytails",
          "bun",
          "buzzed",
          "dreadlocks",
          "mohawk"
        ],
        "default": "straight"
      }
    },
    "required": ["style"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid hair style: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Hair style is required",
      "invalidType": "Invalid type for hair style: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
