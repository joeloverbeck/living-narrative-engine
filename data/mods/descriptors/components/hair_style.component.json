{
  "$schema": "http://example.com/schemas/component.schema.json",
  "description": "Hair style descriptors",
  "data": {
    "type": "object",
    "properties": {
      "style": {
        "type": "string",
        "description": "The hair style",
        "enum": ["straight", "wavy", "curly", "kinky", "braided", "ponytail", "bun", "dreadlocks", "mohawk"],
        "default": "straight"
      }
    },
    "required": ["style"],
    "additionalProperties": false
  }
}