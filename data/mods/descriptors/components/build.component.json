{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:build",
  "description": "Body build descriptors for physique and muscle tone",
  "dataSchema": {
    "type": "object",
    "properties": {
      "build": {
        "type": "string",
        "description": "The body build type",
        "enum": [
          "athletic",
          "atrophied",
          "barrel-chested",
          "cadaverous",
          "frail",
          "gaunt",
          "hourglass",
          "hulking",
          "lanky",
          "lissom",
          "massive",
          "muscular",
          "powerful",
          "shapely",
          "skeletal",
          "skinny",
          "slim",
          "stocky",
          "thick",
          "toned",
          "willowy",
          "working-strength"
        ],
        "default": "average"
      }
    },
    "required": ["build"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid build: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Build is required",
      "invalidType": "Invalid type for build: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
