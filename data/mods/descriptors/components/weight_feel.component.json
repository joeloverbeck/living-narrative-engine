{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:weight_feel",
  "description": "Describes the perceived weight or density of an object",
  "dataSchema": {
    "type": "object",
    "properties": {
      "weight": {
        "type": "string",
        "description": "The perceived weight",
        "enum": ["light", "moderate", "heavy", "meaty", "full", "hollow"],
        "default": "moderate"
      }
    },
    "required": ["weight"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid weight: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Weight is required",
      "invalidType": "Invalid type for weight: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
