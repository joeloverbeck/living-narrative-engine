{
  "$schema": "http://example.com/schemas/component.schema.json",
  "id": "descriptors:weight_feel",
  "description": "Describes the perceived weight or density of an object",
  "dataSchema": {
    "type": "object",
    "properties": {
      "weight": {
        "type": "string",
        "description": "The perceived weight",
        "enum": ["light", "moderate", "heavy", "meaty", "full", "hollow"],
        "default": "moderate"
      }
    },
    "required": ["weight"],
    "additionalProperties": false
  }
}
