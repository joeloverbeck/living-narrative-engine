{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:digit_count",
  "description": "Describes the number of digits (fingers/toes) on a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "count": {
        "type": "string",
        "description": "The digit count",
        "enum": ["3", "4", "5", "6+", "abnormal"],
        "default": "5"
      }
    },
    "required": ["count"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid digit count: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Digit count is required",
      "invalidType": "Invalid type for digit count: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
