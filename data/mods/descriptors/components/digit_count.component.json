{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:digit_count",
  "description": "Describes the number of digits (fingers/toes) on a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "count": {
        "type": "string",
        "description": "The digit count",
        "enum": [
          "3",
          "4",
          "5",
          "6+",
          "abnormal"
        ],
        "default": "5"
      }
    },
    "required": ["count"],
    "additionalProperties": false
  }
}
