{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:facial_hair",
  "description": "Describes facial hair characteristics",
  "dataSchema": {
    "type": "object",
    "properties": {
      "style": {
        "type": "string",
        "description": "The facial hair style",
        "enum": [
          "clean-shaven",
          "stubble",
          "mustache",
          "goatee",
          "bearded",
          "full-beard",
          "mutton-chops",
          "soul-patch",
          "van-dyke"
        ],
        "default": "clean-shaven"
      }
    },
    "required": ["style"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid facial hair style: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Facial hair style is required",
      "invalidType": "Invalid type for facial hair style: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
