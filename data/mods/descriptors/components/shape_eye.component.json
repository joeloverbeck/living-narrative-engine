{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:shape_eye",
  "description": "Eye-specific shape descriptors",
  "dataSchema": {
    "type": "object",
    "properties": {
      "shape": {
        "type": "string",
        "description": "The shape of the eye",
        "enum": [
          "round",
          "almond",
          "hooded",
          "monolid",
          "downturned",
          "upturned"
        ],
        "default": "round"
      }
    },
    "required": ["shape"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid eye shape: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Eye Shape is required",
      "invalidType": "Invalid type for eye shape: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
