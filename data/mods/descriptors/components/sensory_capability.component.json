{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "descriptors:sensory_capability",
  "description": "Describes the non-visual sensory capabilities of a body part",
  "dataSchema": {
    "type": "object",
    "properties": {
      "capability": {
        "type": "string",
        "description": "The sensory capability",
        "enum": [
          "normal",
          "chemoreceptive",
          "electromagnetic",
          "pressure-sensitive",
          "thermal"
        ],
        "default": "normal"
      }
    },
    "required": [
      "capability"
    ],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid sensory capability: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "Sensory Capability is required",
      "invalidType": "Invalid type for sensory capability: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}