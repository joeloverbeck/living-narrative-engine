{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "personal-space",
  "version": "1.0.0",
  "name": "Personal Space",
  "description": "Actions for managing interpersonal distance and spatial intimacy.",
  "actionPurpose": "Manage personal space, approach others, and adjust seating distance.",
  "actionConsiderWhen": "Getting closer to someone, adjusting seating position, or maintaining comfortable distance.",
  "author": "Living Narrative Engine",
  "gameVersion": ">=0.0.1",
  "dependencies": [
    {
      "id": "anatomy",
      "version": "^1.0.0"
    },
    {
      "id": "personal-space-states",
      "version": "^1.0.0"
    },
    {
      "id": "sex-states",
      "version": "^1.0.0"
    },
    {
      "id": "positioning",
      "version": "^1.0.0"
    },
    {
      "id": "sitting",
      "version": "^1.0.0"
    },
    {
      "id": "bending-states",
      "version": "^1.0.0"
    }
  ],
  "content": {
    "actions": [
      "get_close.action.json",
      "scoot_closer.action.json",
      "scoot_closer_right.action.json",
      "sit_down_at_distance.action.json",
      "step_back.action.json"
    ],
    "conditions": [
      "actor-is-in-closeness.condition.json",
      "event-is-action-get-close.condition.json",
      "event-is-action-scoot-closer-right.condition.json",
      "event-is-action-scoot-closer.condition.json",
      "event-is-action-sit-down-at-distance.condition.json",
      "event-is-action-step-back.condition.json"
    ],
    "events": [
      "closeness_with_target_broken.event.json"
    ],
    "rules": [
      "closeness_auto_move.rule.json",
      "get_close.rule.json",
      "handle_scoot_closer.rule.json",
      "handle_scoot_closer_right.rule.json",
      "handle_sit_down_at_distance.rule.json",
      "step_back.rule.json"
    ],
    "scopes": [
      "actors_in_location_not_wielding.scope",
      "actors_sitting_with_space_to_right.scope",
      "close_actors.scope",
      "close_actors_facing_each_other.scope",
      "close_actors_facing_each_other_or_behind_target.scope",
      "close_actors_facing_each_other_or_behind_target_with_hands.scope",
      "close_actors_or_entity_kneeling_before_actor.scope",
      "closest_leftmost_occupant.scope",
      "closest_rightmost_occupant.scope",
      "furniture_actor_sitting_on.scope"
    ]
  }
}
