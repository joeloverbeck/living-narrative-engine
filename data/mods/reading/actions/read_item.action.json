{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "reading:read_item",
  "name": "Read Item",
  "description": "Read an item's readable text to learn its contents.",
  "targets": {
    "primary": {
      "scope": "items-core:examinable_items",
      "placeholder": "item",
      "description": "Readable item to read"
    }
  },
  "required_components": {
    "primary": ["items-core:item", "reading:readable"]
  },
  "prerequisites": [
    {
      "logic": {
        "isActorLocationLit": ["actor"]
      },
      "failure_message": "It is too dark to read anything."
    }
  ],
  "template": "read {item}",
  "visual": {
    "backgroundColor": "#3d2f1f",
    "textColor": "#f5f0e1",
    "hoverBackgroundColor": "#4a3a28",
    "hoverTextColor": "#fffef8"
  }
}
