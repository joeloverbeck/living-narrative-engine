{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_draw_salt_boundary",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "warding:event-is-action-draw-salt-boundary"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "RESOLVE_OUTCOME",
      "comment": "Fixed difficulty contest using warding_skill vs difficulty 50",
      "parameters": {
        "actor_skill_component": "skills:warding_skill",
        "actor_skill_default": 10,
        "difficulty_modifier": 50,
        "formula": "linear",
        "result_variable": "wardingResult"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Set common variables needed by the end-turn macros",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": { "variable_name": "perceptionType", "value": "action_target_general" }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "IF",
      "comment": "Handle CRITICAL_SUCCESS outcome - flat structure (1 of 4)",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.wardingResult.outcome" },
            "CRITICAL_SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} draws a perfect salt boundary around the corrupted target {context.targetName}.",
              "perception_type": "action_target_general",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} draws a perfect salt boundary around the corrupted target {context.targetName}."
            }
          },
          { "macro": "core:logSuccessOutcomeAndEndTurn" }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle SUCCESS outcome - flat structure (2 of 4)",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.wardingResult.outcome" },
            "SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} draws a correct salt boundary around the corrupted target {context.targetName}.",
              "perception_type": "action_target_general",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} draws a correct salt boundary around the corrupted target {context.targetName}."
            }
          },
          { "macro": "core:logSuccessOutcomeAndEndTurn" }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FAILURE outcome - flat structure (3 of 4)",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.wardingResult.outcome" },
            "FAILURE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} fails at drawing a salt boundary around the corrupted target {context.targetName}. The boundary will need to be redone.",
              "perception_type": "action_target_general",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} fails at drawing a salt boundary around the corrupted target {context.targetName}. The boundary will need to be redone."
            }
          },
          { "macro": "core:logFailureOutcomeAndEndTurn" }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FUMBLE outcome - flat structure (4 of 4)",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.wardingResult.outcome" },
            "FUMBLE"
          ]
        },
        "then_actions": [
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "positioning:fallen",
              "value": {}
            }
          },
          { "type": "REGENERATE_DESCRIPTION", "parameters": { "entity_ref": "actor" } },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} tries to draw a salt boundary around the corrupted target {context.targetName} in a hurry, but slips and falls to the ground.",
              "perception_type": "action_target_general",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} tries to draw a salt boundary around the corrupted target {context.targetName} in a hurry, but slips and falls to the ground."
            }
          },
          { "macro": "core:logFailureOutcomeAndEndTurn" }
        ]
      }
    }
  ]
}
