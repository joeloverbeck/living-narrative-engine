{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "warding:draw_salt_boundary",
  "name": "Draw Salt Boundary",
  "description": "Attempt to create a protective salt boundary around a corrupted target.",
  "template": "draw salt boundary around {target} ({chance}% chance)",
  "generateCombinations": true,
  "required_components": {
    "actor": [
      "skills:warding_skill"
    ]
  },
  "forbidden_components": {
    "actor": [
      "positioning:hugging",
      "positioning:giving_blowjob",
      "positioning:doing_complex_performance",
      "positioning:bending_over",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen"
    ],
    "primary": [
      "warding:warded_by_salt"
    ]
  },
  "targets": {
    "primary": {
      "scope": "warding:corrupted_actors",
      "placeholder": "target",
      "description": "Corrupted actor to ward"
    }
  },
  "chanceBased": {
    "enabled": true,
    "contestType": "fixed_difficulty",
    "fixedDifficulty": 50,
    "formula": "linear",
    "actorSkill": {
      "component": "skills:warding_skill",
      "property": "value",
      "default": 10
    },
    "bounds": {
      "min": 5,
      "max": 95
    },
    "outcomes": {
      "criticalSuccessThreshold": 5,
      "criticalFailureThreshold": 95
    },
    "modifiers": [
      {
        "condition": {
          "logic": {
            "!": [{ "var": "entity.primary.components.positioning:being_restrained" }]
          }
        },
        "type": "flat",
        "value": -15,
        "tag": "target unrestrained",
        "targetRole": "primary",
        "description": "Penalty for warding an unrestrained target"
      },
      {
        "condition": {
          "logic": {
            "!!": [{ "var": "entity.primary.components.positioning:being_restrained" }]
          }
        },
        "type": "flat",
        "value": 15,
        "tag": "target restrained",
        "targetRole": "primary",
        "description": "Bonus for warding a restrained target"
      },
      {
        "condition": {
          "logic": {
            "!!": [{ "var": "entity.primary.components.positioning:fallen" }]
          }
        },
        "type": "flat",
        "value": 10,
        "tag": "target downed",
        "targetRole": "primary",
        "description": "Bonus for warding a fallen target"
      }
    ]
  },
  "visual": {
    "backgroundColor": "#424242",
    "textColor": "#fafafa",
    "hoverBackgroundColor": "#616161",
    "hoverTextColor": "#ffffff"
  }
}