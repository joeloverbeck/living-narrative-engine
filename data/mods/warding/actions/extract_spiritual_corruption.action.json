{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "warding:extract_spiritual_corruption",
  "name": "Extract Spiritual Corruption",
  "description": "Use a spiritual anchor to extract corruption from a target.",
  "template": "extract spiritual corruption from {target} with {anchor} ({chance}% chance)",
  "generateCombinations": true,
  "required_components": {
    "actor": ["skills:warding_skill"]
  },
  "forbidden_components": {
    "actor": [
      "positioning:hugging",
      "sex-states:giving_blowjob",
      "positioning:doing_complex_performance",
      "positioning:bending_over",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen"
    ]
  },
  "targets": {
    "primary": {
      "scope": "warding:corrupted_actors",
      "placeholder": "target",
      "description": "Corrupted actor to cleanse"
    },
    "secondary": {
      "scope": "warding:spiritual_anchors_in_inventory",
      "placeholder": "anchor",
      "description": "Anchor item to channel corruption"
    }
  },
  "chanceBased": {
    "enabled": true,
    "contestType": "opposed",
    "actorSkill": {
      "component": "skills:warding_skill",
      "property": "value",
      "default": 10
    },
    "targetSkill": {
      "component": "skills:resolve_skill",
      "property": "value",
      "default": 0,
      "targetRole": "primary"
    },
    "formula": "ratio",
    "bounds": { "min": 5, "max": 95 },
    "outcomes": {
      "criticalSuccessThreshold": 5,
      "criticalFailureThreshold": 95
    },
    "modifiers": [
      {
        "condition": {
          "logic": {
            "!": [
              {
                "var": "entity.primary.components.positioning:being_restrained"
              }
            ]
          }
        },
        "type": "flat",
        "value": -10,
        "tag": "target unrestrained",
        "targetRole": "primary",
        "description": "Penalty for extracting corruption from an unrestrained target"
      },
      {
        "condition": {
          "logic": {
            "!!": [
              {
                "var": "entity.primary.components.positioning:being_restrained"
              }
            ]
          }
        },
        "type": "flat",
        "value": 10,
        "tag": "target restrained",
        "targetRole": "primary",
        "description": "Bonus for extracting corruption from a restrained target"
      },
      {
        "condition": {
          "logic": {
            "!!": [
              { "var": "entity.primary.components.warding:warded_by_salt" }
            ]
          }
        },
        "type": "flat",
        "value": 5,
        "tag": "target warded",
        "targetRole": "primary",
        "description": "Bonus for extracting corruption from a salt-warded target"
      },
      {
        "condition": {
          "logic": {
            "!!": [{ "var": "entity.primary.components.positioning:fallen" }]
          }
        },
        "type": "flat",
        "value": -5,
        "tag": "target downed",
        "targetRole": "primary",
        "description": "Penalty for extracting corruption from a downed target"
      }
    ]
  },
  "visual": {
    "backgroundColor": "#424242",
    "textColor": "#fafafa",
    "hoverBackgroundColor": "#616161",
    "hoverTextColor": "#ffffff"
  }
}
