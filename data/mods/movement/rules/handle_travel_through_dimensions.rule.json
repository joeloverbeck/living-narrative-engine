{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_travel_through_dimensions",
  "comment": "Handles entity traveling through dimensional tear to reach another dimension",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "movement:event-is-action-travel-through-dimensions"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "destinationName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName}'s form ripples and distorts as they step through the dimensional tear."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "movement.departure"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "GET_TIMESTAMP",
      "parameters": {
        "result_variable": "nowIso"
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Dispatch departure perception at origin location",
      "parameters": {
        "eventType": "core:perceptible_event",
        "payload": {
          "eventName": "core:perceptible_event",
          "locationId": "{context.locationId}",
          "descriptionText": "{context.logMessage}",
          "timestamp": "{context.nowIso}",
          "perceptionType": "{context.perceptionType}",
          "actorId": "{event.payload.actorId}",
          "targetId": "{context.targetId}",
          "involvedEntities": []
        }
      }
    },
    {
      "type": "MODIFY_COMPONENT",
      "comment": "Update the actor's locationId to the dimensional destination.",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "field": "locationId",
        "mode": "set",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} materializes from the dimensional tear, their form stabilizing in alien space."
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "movement.arrival"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "GET_TIMESTAMP",
      "parameters": {
        "result_variable": "nowIso"
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Dispatch arrival perception at destination location",
      "parameters": {
        "eventType": "core:perceptible_event",
        "payload": {
          "eventName": "core:perceptible_event",
          "locationId": "{context.locationId}",
          "descriptionText": "{context.logMessage}",
          "timestamp": "{context.nowIso}",
          "perceptionType": "{context.perceptionType}",
          "actorId": "{event.payload.actorId}",
          "targetId": "{context.targetId}",
          "involvedEntities": []
        }
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} travels through dimensions to {context.destinationName}."
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "parameters": {
        "eventType": "core:display_successful_action_result",
        "payload": {
          "message": "{context.logMessage}"
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "parameters": {
        "eventType": "core:action_success",
        "payload": {
          "eventName": "core:action_success",
          "actionId": "{event.payload.actionId}",
          "actorId": "{event.payload.actorId}",
          "targetId": "{event.payload.targetId}",
          "success": true
        }
      }
    },
    {
      "type": "END_TURN",
      "parameters": {
        "entityId": "{event.payload.actorId}",
        "success": true
      }
    }
  ]
}
