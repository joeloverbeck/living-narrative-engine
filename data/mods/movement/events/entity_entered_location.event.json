{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "movement:entity_entered_location",
  "description": "Dispatched when an entity enters a location due to closeness auto-move.",
  "payloadSchema": {
    "title": "Movement: Entity Entered Location Payload",
    "description": "Payload for the movement:entity_entered_location event.",
    "type": "object",
    "properties": {
      "entityId": {
        "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/namespacedId",
        "description": "The ID of the entity that entered the location."
      },
      "locationId": {
        "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/namespacedId",
        "description": "The ID of the location the entity entered."
      },
      "previousLocationId": {
        "$ref": "schema://living-narrative-engine/common.schema.json#/definitions/namespacedId",
        "description": "The ID of the previous location the entity was in."
      }
    },
    "required": ["entityId", "locationId", "previousLocationId"],
    "additionalProperties": false
  }
}
