{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_wrap_arm_around_waist",
  "comment": "Handles the 'affection:wrap_arm_around_waist' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "affection:event-is-action-wrap_arm_around_waist"
  },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} wraps an arm around {context.targetName}'s waist."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
