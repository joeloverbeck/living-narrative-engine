{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_brush_hand",
  "comment": "Handles the 'affection:brush_hand' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "affection:event-is-action-brush-hand"
  },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} brushes {context.targetName}'s hand with their own."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
