{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_link_arms",
  "comment": "Handles the 'affection:link_arms' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "affection:event-is-action-link-arms" },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} links arms with {context.targetName}."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
