{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_place_hand_on_knee",
  "comment": "Handles the 'affection:place_hand_on_knee' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "affection:event-is-action-place-hand-on-knee"
  },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} places a hand on {context.targetName}'s knee."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
