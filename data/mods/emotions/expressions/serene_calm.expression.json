                            0.55
                        ]
                    },
                    {
                        "<": [
                            {
                                "var": "emotions.contentment"
                            },
                            0.45
                        ]
                    },
                    {
                        "<": [
                            {
                                "var": "emotions.relief"
                            },
                            0.45
                        ]
                    },
                    {
                        "<=": [
                            {
                                "var": "moodAxes.arousal"
                            },
                            -20
                        ]
                    },
                    {
                        "<=": [
                            {
                                "var": "moodAxes.threat"
                            },
                            20
                        ]
                    }
                ]
            }
        }
