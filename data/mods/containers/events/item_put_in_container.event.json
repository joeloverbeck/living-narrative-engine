{
  "$schema": "schema://living-narrative-engine/event.schema.json",
  "id": "containers:item_put_in_container",
  "description": "Dispatched when an item is put into a container",
  "payloadSchema": {
    "type": "object",
    "properties": {
      "actorEntity": {
        "type": "string",
        "description": "Actor who put the item"
      },
      "containerEntity": {
        "type": "string",
        "description": "Container the item was put into"
      },
      "itemEntity": {
        "type": "string",
        "description": "Item that was put in"
      }
    },
    "required": ["actorEntity", "containerEntity", "itemEntity"]
  }
}
