{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "writing:jot_down_notes",
  "name": "Jot Down Notes",
  "description": "Make notes in a notebook using a writing utensil.",
  "targets": {
    "primary": {
      "scope": "items:actor_inventory_items",
      "placeholder": "notebook",
      "description": "Notebook to write in"
    },
    "secondary": {
      "scope": "items:actor_inventory_items",
      "placeholder": "utensil",
      "description": "Writing utensil to use"
    }
  },
  "required_components": {
    "primary": ["items-core:item", "items:readable"],
    "secondary": ["items-core:item", "writing:allows_writing"]
  },
  "forbidden_components": {
    "actor": [
      "performances-states:doing_complex_performance",
      "physical-control-states:restraining"
    ]
  },
  "prerequisites": [
    {
      "logic": {
        "isActorLocationLit": ["actor"]
      },
      "failure_message": "It is too dark to write."
    }
  ],
  "template": "jot down notes on {notebook} using {utensil}",
  "visual": {
    "backgroundColor": "#1c2833",
    "textColor": "#f5ecd7",
    "hoverBackgroundColor": "#273746",
    "hoverTextColor": "#faf6eb"
  }
}
