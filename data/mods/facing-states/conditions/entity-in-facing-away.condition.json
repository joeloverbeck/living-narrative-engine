{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "facing-states:entity-in-facing-away",
  "description": "Checks if the entity is in the actor's facing_away_from array (i.e., the actor is facing away from this entity).",
  "logic": {
    "in": [
      {
        "var": "entity.id"
      },
      {
        "var": "actor.components.facing-states:facing_away.facing_away_from"
      }
    ]
  }
}
