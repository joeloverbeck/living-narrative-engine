{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_swim_to_connected_liquid_body",
  "comment": "Handles liquids:swim_to_connected_liquid_body action with chance-based outcomes.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "liquids:event-is-action-swim-to-connected-liquid-body"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "comment": "Get the name of the connected liquid body (primary target).",
      "parameters": {
        "entity_ref": {
          "entityId": "{event.payload.primaryId}"
        },
        "result_variable": "connectedLiquidBodyName"
      }
    },
    {
      "type": "GET_NAME",
      "comment": "Get the name of the destination location (secondary target).",
      "parameters": {
        "entity_ref": {
          "entityId": "{event.payload.secondaryId}"
        },
        "result_variable": "connectedLocationName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "RESOLVE_OUTCOME",
      "comment": "Fixed difficulty contest using mobility_skill vs difficulty 50.",
      "parameters": {
        "actor_skill_component": "skills:mobility_skill",
        "actor_skill_default": 0,
        "difficulty_modifier": 50,
        "formula": "linear",
        "result_variable": "swimResult"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Set common variables needed by the end-turn macros.",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "IF",
      "comment": "Handle CRITICAL_SUCCESS outcome (1 of 4).",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.swimResult.outcome" },
            "CRITICAL_SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Departure event at current location.",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} swims effortlessly toward {context.connectedLocationName} via {context.connectedLiquidBodyName}.",
              "actor_description": "I swim effortlessly toward {context.connectedLocationName} via {context.connectedLiquidBodyName}.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear smooth, confident strokes cutting through a body of liquid.",
                "tactile": "I feel a body of liquid ripple from powerful swimming movements nearby."
              }
            }
          },
          {
            "type": "MODIFY_COMPONENT",
            "comment": "Update the actor's liquid body to the connected liquid body.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "liquids-states:in_liquid_body",
              "field": "liquid_body_id",
              "mode": "set",
              "value": "{event.payload.primaryId}"
            }
          },
          {
            "type": "MODIFY_COMPONENT",
            "comment": "Update the actor's locationId to the connected location.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "core:position",
              "field": "locationId",
              "mode": "set",
              "value": "{event.payload.secondaryId}"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Arrival event at new location.",
            "parameters": {
              "location_id": "{event.payload.secondaryId}",
              "description_text": "{context.actorName} arrives in {context.connectedLiquidBodyName}, swimming effortlessly.",
              "actor_description": "I arrive in {context.connectedLiquidBodyName}, swimming effortlessly.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear someone arrive with a splash from the connecting body of liquid.",
                "tactile": "I feel the body of liquid surge as someone swims in."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} swims effortlessly to {context.connectedLocationName} via {context.connectedLiquidBodyName}."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle SUCCESS outcome (2 of 4).",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.swimResult.outcome" },
            "SUCCESS"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Departure event at current location.",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} swims toward {context.connectedLocationName} via {context.connectedLiquidBodyName}.",
              "actor_description": "I swim toward {context.connectedLocationName} via {context.connectedLiquidBodyName}.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear steady strokes moving through a body of liquid.",
                "tactile": "I feel a body of liquid ripple from swimming movements nearby."
              }
            }
          },
          {
            "type": "MODIFY_COMPONENT",
            "comment": "Update the actor's liquid body to the connected liquid body.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "liquids-states:in_liquid_body",
              "field": "liquid_body_id",
              "mode": "set",
              "value": "{event.payload.primaryId}"
            }
          },
          {
            "type": "MODIFY_COMPONENT",
            "comment": "Update the actor's locationId to the connected location.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "core:position",
              "field": "locationId",
              "mode": "set",
              "value": "{event.payload.secondaryId}"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Arrival event at new location.",
            "parameters": {
              "location_id": "{event.payload.secondaryId}",
              "description_text": "{context.actorName} arrives in {context.connectedLiquidBodyName}.",
              "actor_description": "I arrive in {context.connectedLiquidBodyName}.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear someone arrive with a splash from the connecting body of liquid.",
                "tactile": "I feel the body of liquid surge as someone swims in."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} swims to {context.connectedLocationName} via {context.connectedLiquidBodyName}."
            }
          },
          {
            "macro": "core:logSuccessOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FAILURE outcome (3 of 4).",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.swimResult.outcome" },
            "FAILURE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} struggles to swim to {context.connectedLocationName} via {context.connectedLiquidBodyName}, making little progress.",
              "actor_description": "I struggle to swim to {context.connectedLocationName} via {context.connectedLiquidBodyName}, making little progress.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear labored splashing and struggling in the water.",
                "tactile": "I feel erratic water movements from someone struggling to swim."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} struggles to swim to {context.connectedLocationName} via {context.connectedLiquidBodyName}, making little progress."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "comment": "Handle FUMBLE outcome (4 of 4).",
      "parameters": {
        "condition": {
          "==": [
            { "var": "context.swimResult.outcome" },
            "FUMBLE"
          ]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} struggles in an uncoordinated way toward {context.connectedLocationName} via {context.connectedLiquidBodyName}, and ends up submerged in the liquid, having made no progress to the destination.",
              "actor_description": "I struggle in an uncoordinated way toward {context.connectedLocationName} via {context.connectedLiquidBodyName}, and end up submerged in the liquid, having made no progress to the destination.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "involved_entities": [],
              "alternate_descriptions": {
                "auditory": "I hear desperate thrashing and gasping in the water.",
                "tactile": "I feel chaotic water movements from someone floundering."
              }
            }
          },
          {
            "type": "ADD_COMPONENT",
            "comment": "Mark actor as submerged after fumbling the swim attempt.",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "liquids-states:submerged",
              "value": {}
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} struggles in an uncoordinated way toward {context.connectedLocationName} via {context.connectedLiquidBodyName}, and ends up submerged in the liquid, having made no progress to the destination."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    }
  ]
}
