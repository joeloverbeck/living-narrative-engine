{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_place_yourself_behind",
  "comment": "Handles the 'maneuvering:place_yourself_behind' action. Adds facing_away component to target, causing them to face away from the actor.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "maneuvering:event-is-action-place-yourself-behind"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "targetName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "target",
        "component_type": "facing-states:facing_away",
        "result_variable": "targetFacingState",
        "missing_value": null
      }
    },
    {
      "type": "IF",
      "comment": "Check if target already has facing_away component",
      "parameters": {
        "condition": { "var": "context.targetFacingState" },
        "then_actions": [
          {
            "type": "MODIFY_ARRAY_FIELD",
            "comment": "Add actor to existing facing_away_from array",
            "parameters": {
              "entity_ref": "target",
              "component_type": "facing-states:facing_away",
              "field": "facing_away_from",
              "mode": "push_unique",
              "value": "{event.payload.actorId}"
            }
          }
        ],
        "else_actions": [
          {
            "type": "ADD_COMPONENT",
            "comment": "Create new facing_away component with actor in facing_away_from array",
            "parameters": {
              "entity_ref": "target",
              "component_type": "facing-states:facing_away",
              "value": {
                "facing_away_from": ["{event.payload.actorId}"]
              }
            }
          }
        ]
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Dispatch actor_placed_behind event for game state tracking",
      "parameters": {
        "eventType": "maneuvering:actor_placed_behind",
        "payload": {
          "actor": "{event.payload.actorId}",
          "target": "{event.payload.targetId}"
        }
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "comment": "Dispatch sense-aware perceptible event for placing behind target.",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.actorName} places themselves behind {context.targetName}.",
        "actor_description": "I place myself behind {context.targetName}.",
        "target_description": "{context.actorName} moves behind me.",
        "perception_type": "physical.target_action",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}",
        "alternate_descriptions": {
          "auditory": "I hear footsteps and the rustle of movement as someone repositions nearby."
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Display success message in UI",
      "parameters": {
        "eventType": "core:display_successful_action_result",
        "payload": {
          "message": "{context.actorName} places themselves behind {context.targetName}."
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Mark action as successful",
      "parameters": {
        "eventType": "core:action_success",
        "payload": {
          "actionId": "maneuvering:place_yourself_behind",
          "actorId": "{event.payload.actorId}",
          "targetId": "{event.payload.targetId}",
          "success": true
        }
      }
    },
    {
      "type": "END_TURN",
      "comment": "End turn after successful action",
      "parameters": {
        "entityId": "{event.payload.actorId}",
        "success": true
      }
    }
  ]
}