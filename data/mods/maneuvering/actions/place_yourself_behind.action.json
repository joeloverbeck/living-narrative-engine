{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "maneuvering:place_yourself_behind",
  "name": "Place Yourself Behind",
  "description": "Position yourself behind someone, causing them to face away from you.",
  "targets": {
    "primary": {
      "scope": "maneuvering:actors_in_location_not_facing_away_from_actor",
      "placeholder": "target",
      "description": "Actor to position yourself behind"
    }
  },
  "required_components": {
    "actor": []
  },
  "forbidden_components": {
    "actor": [
      "positioning:being_hugged",
      "positioning:bending_over",
      "positioning:biting_neck",
      "positioning:hugging",
      "positioning:sitting_on",
      "positioning:kneeling_before",
      "positioning:lying_down",
      "positioning:straddling_waist",
      "positioning:doing_complex_performance",
      "positioning:being_restrained",
      "positioning:restraining",
      "positioning:fallen"
    ],
    "primary": ["positioning:lying_down", "sex-states:giving_blowjob"]
  },
  "template": "place yourself behind {target}",
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "core:actor-mouth-available"
      },
      "failure_message": "You cannot do that while your mouth is engaged."
    },
    {
      "logic": {
        "isActorLocationLit": ["actor"]
      },
      "failure_message": "It is too dark to position yourself."
    }
  ],
  "visual": {
    "backgroundColor": "#004d40",
    "textColor": "#b2dfdb",
    "hoverBackgroundColor": "#00695c",
    "hoverTextColor": "#e0f2f1"
  }
}