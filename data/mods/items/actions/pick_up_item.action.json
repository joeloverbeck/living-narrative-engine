{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "items:pick_up_item",
  "name": "Pick Up Item",
  "description": "Pick up an item from the current location",
  "targets": {
    "primary": {
      "scope": "items:items_at_location",
      "placeholder": "item",
      "description": "Item to pick up"
    }
  },
  "required_components": {
    "actor": [
      "items:inventory"
    ]
  },
  "forbidden_components": {
    "actor": [
      "positioning:bending_over",
      "positioning:being_fucked_vaginally",
      "positioning:fallen"
    ]
  },
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "anatomy:actor-has-free-grabbing-appendage"
      },
      "failure_message": "You need a free hand to pick up items."
    }
  ],
  "template": "pick up {item}",
  "visual": {
    "backgroundColor": "#004d61",
    "textColor": "#e0f7fa",
    "hoverBackgroundColor": "#006978",
    "hoverTextColor": "#ffffff"
  }
}