{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "items:drop_wielded_item",
  "name": "Drop Wielded Item",
  "description": "Release and drop an item you are currently wielding",
  "required_components": {
    "actor": ["positioning:wielding"]
  },
  "targets": {
    "primary": {
      "scope": "items:wielded_items",
      "placeholder": "item",
      "description": "Wielded item to drop"
    }
  },
  "forbidden_components": {
    "actor": [
      "positioning:doing_complex_performance",
      "positioning:restraining"
    ]
  },
  "prerequisites": [],
  "template": "drop {item}",
  "visual": {
    "backgroundColor": "#004d61",
    "textColor": "#e0f7fa",
    "hoverBackgroundColor": "#006978",
    "hoverTextColor": "#ffffff"
  }
}
