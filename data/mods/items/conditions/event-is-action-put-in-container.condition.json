{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "items:event-is-action-put-in-container",
  "description": "True if the event is an attempt to put an item in a container",
  "condition": {
    "==": [
      {
        "var": "event.payload.actionId"
      },
      "items:put_in_container"
    ]
  }
}
