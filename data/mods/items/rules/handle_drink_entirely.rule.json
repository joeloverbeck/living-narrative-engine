{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_drink_entirely",
  "comment": "Handles drink_entirely action with dual perception system (public message without flavor, private message with flavor to actor)",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "items:event-is-action-drink-entirely"
  },
  "actions": [
    {
      "type": "DRINK_ENTIRELY",
      "comment": "Consume all liquid from container",
      "parameters": {
        "actorEntity": "{event.payload.actorId}",
        "containerEntity": "{event.payload.targetId}",
        "result_variable": "drinkResult"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "comment": "Get actor position for logging",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "GET_NAME",
      "comment": "Get actor name",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "comment": "Get container name",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "containerName"
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Prepare public message (no flavor)",
      "parameters": {
        "variable_name": "publicMessage",
        "value": "{context.actorName} drinks entirely from {context.containerName}, emptying it."
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "comment": "Public message visible to all EXCEPT actor",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.publicMessage}",
        "perception_type": "liquid_consumed_entirely",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}",
        "contextual_data": {
          "excludedActorIds": ["{event.payload.actorId}"],
          "volumeConsumed": "{context.drinkResult.volumeConsumed}"
        }
      }
    },
    {
      "type": "DISPATCH_EVENT",
      "comment": "Display success message in UI",
      "parameters": {
        "eventType": "core:display_successful_action_result",
        "payload": {
          "message": "{context.publicMessage}"
        }
      }
    },
    {
      "type": "SET_VARIABLE",
      "comment": "Prepare private message with flavor for actor",
      "parameters": {
        "variable_name": "privateMessage",
        "value": "{context.actorName} drinks entirely from {context.containerName}, emptying it. {context.drinkResult.flavorText}"
      }
    },
    {
      "type": "DISPATCH_PERCEPTIBLE_EVENT",
      "comment": "Private message with flavor visible only to actor",
      "parameters": {
        "location_id": "{context.actorPosition.locationId}",
        "description_text": "{context.privateMessage}",
        "perception_type": "liquid_consumed_entirely",
        "actor_id": "{event.payload.actorId}",
        "target_id": "{event.payload.targetId}",
        "contextual_data": {
          "recipientIds": ["{event.payload.actorId}"],
          "volumeConsumed": "{context.drinkResult.volumeConsumed}",
          "flavorText": "{context.drinkResult.flavorText}"
        }
      }
    },
    {
      "type": "END_TURN",
      "comment": "End turn after successful drink",
      "parameters": {
        "entityId": "{event.payload.actorId}",
        "success": true
      }
    }
  ]
}
