{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "items",
  "version": "1.0.0",
  "name": "Items System",
  "description": "Core items and inventory system.",
  "actionPurpose": "Interact with objects through pickup, examination, use, and transfer between characters.",
  "actionConsiderWhen": "Managing inventory, examining interesting objects, sharing items with others, or using functional items. Use the containers mod to store or retrieve items.",
  "author": "Living Narrative Engine",
  "gameVersion": "0.0.1",
  "dependencies": [
    {
      "id": "items-core",
      "version": "1.0.0"
    },
    {
      "id": "inventory",
      "version": "^1.0.0"
    },
    {
      "id": "physical-control-states",
      "version": "^1.0.0"
    },
    {
      "id": "anatomy",
      "version": "1.0.0"
    },
    {
      "id": "containers-core",
      "version": "1.0.0"
    },
    {
      "id": "personal-space",
      "version": "1.0.0"
    },
    {
      "id": "descriptors",
      "version": "1.0.0"
    }
  ],
  "content": {
    "components": [
      "allows_soothing_hug.component.json",
      "can_apply_lipstick.component.json",
      "drinkable.component.json",
      "empty.component.json",
      "readable.component.json"
    ],
    "actions": [
      "aim_item.action.json",
      "apply_lipstick.action.json",
      "drink_entirely.action.json",
      "drink_from.action.json",
      "hug_item_for_comfort.action.json",
      "lower_aim.action.json",
      "read_item.action.json"
    ],
    "rules": [
      "handle_aim_item.rule.json",
      "handle_apply_lipstick.rule.json",
      "handle_drink_entirely.rule.json",
      "handle_drink_from.rule.json",
      "handle_hug_item_for_comfort.rule.json",
      "handle_lower_aim.rule.json",
      "handle_read_item.rule.json"
    ],
    "conditions": [
      "event-is-action-aim-item.condition.json",
      "event-is-action-apply-lipstick.condition.json",
      "event-is-action-drink-entirely.condition.json",
      "event-is-action-drink-from.condition.json",
      "event-is-action-hug-item-for-comfort.condition.json",
      "event-is-action-lower-aim.condition.json",
      "event-is-action-read-item.condition.json"
    ],
    "scopes": [
      "actor_inventory_items.scope",
      "aimable_items_in_inventory.scope",
      "aimable_targets.scope",
      "aimed_items_in_inventory.scope",
      "close_actors_with_inventory.scope",
      "disinfectant_liquids_in_inventory.scope",
      "examinable_items.scope"
    ],
    "events": [
      "aim_lowered.event.json",
      "item_aimed.event.json",
      "liquid_consumed.event.json",
      "liquid_consumed_entirely.event.json"
    ],
    "entities": {
      "definitions": [
        "antiseptic_bottle.entity.json",
        "brass_key.entity.json",
        "coffee_cup.entity.json",
        "gold_bar.entity.json",
        "letter_to_sheriff.entity.json",
        "plush_teddy_bear.entity.json",
        "red_lipstick.entity.json",
        "revolver.entity.json",
        "smoking_pipe.entity.json",
        "treasure_chest.entity.json"
      ],
      "instances": [
        "red_lipstick.entity.json"
      ]
    }
  }
}