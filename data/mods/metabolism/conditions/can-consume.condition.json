{
  "$schema": "schema://living-narrative-engine/condition.schema.json",
  "id": "metabolism:can-consume",
  "description": "Checks if actor can consume more items (buffer not full)",
  "logic": {
    "<": [
      {
        "var": "event.payload.actor.components.metabolism:metabolic_store.buffer_storage.length"
      },
      {
        "var": "event.payload.actor.components.metabolism:metabolic_store.buffer_capacity"
      }
    ]
  }
}
