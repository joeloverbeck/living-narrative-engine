{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_grab_neck_target",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "grabbing:event-is-action-grab-neck-target"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "actor", "result_variable": "actorName" }
    },
    {
      "type": "GET_NAME",
      "parameters": { "entity_ref": "target", "result_variable": "targetName" }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "RESOLVE_OUTCOME",
      "parameters": {
        "actor_skill_component": "skills:melee_skill",
        "target_skill_component": "skills:mobility_skill",
        "actor_skill_default": 10,
        "target_skill_default": 0,
        "formula": "ratio",
        "result_variable": "attackResult",
        "target_role": "primary"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "locationId",
        "value": "{context.actorPosition.locationId}"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "perceptionType",
        "value": "physical.target_action"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "targetId",
        "value": "{event.payload.targetId}"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "==": [{ "var": "context.attackResult.outcome" }, "CRITICAL_SUCCESS"]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} lunges forward with predatory speed, seizing {context.targetName}'s neck in an iron grip!",
              "actor_description": "I lunge forward with predatory speed, seizing {context.targetName}'s neck in an iron grip!",
              "target_description": "{context.actorName} lunges forward with predatory speed, seizing my neck in an iron grip!",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear a sudden scuffle and a choking sound nearby.",
                "tactile": "I feel the impact of bodies colliding nearby."
              }
            }
          },
          {
            "type": "LOCK_GRABBING",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "count": 1,
              "item_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "grabbing-states:grabbing_neck",
              "value": {
                "grabbed_entity_id": "{event.payload.targetId}",
                "initiated": true,
                "consented": false
              }
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "grabbing-states:neck_grabbed",
              "value": {
                "grabbing_entity_id": "{event.payload.actorId}",
                "consented": false
              }
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "macro": "core:endTurnOnly"
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "==": [{ "var": "context.attackResult.outcome" }, "SUCCESS"]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} reaches out and grabs {context.targetName}'s neck, gaining a firm hold.",
              "actor_description": "I reach out and grab {context.targetName}'s neck, gaining a firm hold.",
              "target_description": "{context.actorName} reaches out and grabs my neck, gaining a firm hold.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear sounds of a brief struggle nearby.",
                "tactile": "I feel vibrations of physical contact nearby."
              }
            }
          },
          {
            "type": "LOCK_GRABBING",
            "parameters": {
              "actor_id": "{event.payload.actorId}",
              "count": 1,
              "item_id": "{event.payload.targetId}"
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "grabbing-states:grabbing_neck",
              "value": {
                "grabbed_entity_id": "{event.payload.targetId}",
                "initiated": true,
                "consented": false
              }
            }
          },
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "target",
              "component_type": "grabbing-states:neck_grabbed",
              "value": {
                "grabbing_entity_id": "{event.payload.actorId}",
                "consented": false
              }
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "target"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "macro": "core:endTurnOnly"
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "==": [{ "var": "context.attackResult.outcome" }, "FAILURE"]
        },
        "then_actions": [
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} reaches for {context.targetName}'s neck, but {context.targetName} manages to evade the grab.",
              "actor_description": "I reach for {context.targetName}'s neck, but they manage to evade my grab.",
              "target_description": "{context.actorName} reaches for my neck, but I manage to evade the grab.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear shuffling and movement nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} reaches for {context.targetName}'s neck, but {context.targetName} manages to evade the grab."
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "==": [{ "var": "context.attackResult.outcome" }, "FUMBLE"]
        },
        "then_actions": [
          {
            "type": "ADD_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "recovery-states:fallen",
              "value": {}
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.actorName} lunges recklessly at {context.targetName}'s throat, completely overextending and crashing to the ground!",
              "actor_description": "I lunge recklessly at {context.targetName}'s throat, completely overextending and crashing to the ground!",
              "target_description": "{context.actorName} lunges recklessly at my throat, completely overextending and crashing to the ground!",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear someone stumble and fall heavily nearby.",
                "tactile": "I feel the thud of someone hitting the ground nearby."
              }
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} lunges recklessly at {context.targetName}'s throat, completely overextending and crashing to the ground!"
            }
          },
          {
            "macro": "core:logFailureOutcomeAndEndTurn"
          }
        ]
      }
    }
  ]
}
