{
  "$schema": "schema://living-narrative-engine/component.schema.json",
  "id": "clothing:wearable",
  "description": "Defines clothing item properties and equipment behavior",
  "dataSchema": {
    "type": "object",
    "properties": {
      "layer": {
        "type": "string",
        "enum": ["underwear", "base", "outer", "accessories", "armor"],
        "description": "Layer priority for stacking"
      },
      "equipmentSlots": {
        "type": "object",
        "properties": {
          "primary": {
            "type": "string",
            "description": "Primary equipment slot this item occupies"
          },
          "secondary": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Additional slots this item may occupy"
          }
        },
        "required": ["primary"],
        "additionalProperties": false
      },
      "allowedLayers": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["underwear", "base", "outer", "accessories", "armor"]
        },
        "description": "Layers allowed for this clothing item based on equipment slot"
      }
    },
    "required": ["layer", "equipmentSlots"],
    "additionalProperties": false
  },
  "validationRules": {
    "generateValidator": true,
    "errorMessages": {
      "invalidEnum": "Invalid {propertyName}: {{value}}. Valid options: {{validValues}}",
      "missingRequired": "{PropertyLabel} is required",
      "invalidType": "Invalid type for {propertyName}: expected {{expected}}, got {{actual}}"
    },
    "suggestions": {
      "enableSimilarity": true,
      "maxDistance": 3,
      "maxSuggestions": 3
    }
  }
}
