{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "clothing",
  "version": "1.1.0",
  "name": "Clothing System",
  "description": "Comprehensive clothing and equipment system with multi-layer support, gender-flexible design, and realistic removal blocking.",
  "actionPurpose": "Remove clothing from yourself or others, managing layers and accessibility.",
  "actionConsiderWhen": "Undressing for intimacy, changing outfits, helping someone remove garments, or exposing body parts.",
  "author": "Living Narrative Engine",
  "dependencies": [
    {
      "id": "core",
      "version": "^1.0.0"
    },
    {
      "id": "anatomy",
      "version": "^1.0.0"
    },
    {
      "id": "positioning",
      "version": "^1.0.0"
    },
    {
      "id": "items",
      "version": "^1.0.0"
    }
  ],
  "gameVersion": ">=0.0.1",
  "content": {
    "components": [
      "blocks_removal.component.json",
      "coverage_mapping.component.json",
      "equipment.component.json",
      "slot_metadata.component.json",
      "wearable.component.json"
    ],
    "entities": {
      "definitions": [],
      "instances": []
    },
    "actions": [
      "put_on_clothing.action.json",
      "remove_clothing.action.json",
      "remove_others_clothing.action.json"
    ],
    "events": [
