      "clothing_instantiation_completed.event.json",
      "clothing_layer_conflict.event.json",
      "clothing_unequipped.event.json"
    ],
    "rules": [
      "handle_put_on_clothing.rule.json",
      "handle_remove_clothing.rule.json",
      "handle_remove_others_clothing.rule.json"
    ],
    "conditions": [
      "event-is-action-put-on-clothing.condition.json",
      "event-is-action-remove-clothing.condition.json",
      "event-is-action-remove-others-clothing.condition.json"
    ],
    "scopes": [
      "inventory_wearables.scope",
      "target_topmost_clothing.scope",
      "target_topmost_torso_lower_clothing.scope",
      "target_topmost_torso_lower_clothing_no_accessories.scope",
      "target_topmost_torso_upper_clothing.scope",
      "topmost_clothing.scope"
    ]
  }
}
