{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "clothing",
  "version": "1.0.0",
  "name": "Clothing System",
  "description": "Comprehensive clothing and equipment system with multi-layer support and gender-flexible design",
  "author": "Living Narrative Engine",
  "dependencies": [
    {
      "id": "anatomy",
      "version": "^1.0.0"
    },
    {
      "id": "core",
      "version": "^1.0.0"
    }
  ],
  "gameVersion": ">=0.0.1",
  "content": {
    "components": [
      "coverage_mapping.component.json",
      "equipment.component.json",
      "slot_metadata.component.json",
      "wearable.component.json"
    ],
    "entities": {
      "definitions": [
        "black_calfskin_belt.entity.json",
        "black_stretch_silk_bodysuit.entity.json",
        "charcoal_wool_tshirt.entity.json",
        "dark_brown_leather_belt.entity.json",
        "dark_indigo_denim_jeans.entity.json",
        "dark_olive_cotton_twill_chore_jacket.entity.json",
        "fitted_navy_cotton_boxer_briefs.entity.json",
        "flat_trainers.entity.json",
        "forest_green_cotton_linen_button_down.entity.json",
        "graphite_wool_wide_leg_trousers.entity.json",
        "gray_ribknit_cotton_socks.entity.json",
        "high_compression_leggings.entity.json",
        "indigo_denim_trucker_jacket.entity.json",
        "leather_stiletto_pumps.entity.json",
        "nude_thong.entity.json",
        "nylon_sports_bra.entity.json",
        "pink_off_shoulder_crop_top.entity.json",
        "pink_short_flared_skirt.entity.json",
        "sand_beige_cotton_chinos.entity.json",
        "sand_suede_chukka_boots.entity.json",
        "underwired_plunge_bra_nude_silk.entity.json",
        "white_cotton_crew_tshirt.entity.json",
        "white_cotton_panties.entity.json",
        "white_leather_sneakers.entity.json",
        "white_platform_sneakers.entity.json",
        "white_structured_linen_blazer.entity.json",
        "white_thigh_high_socks_pink_hearts.entity.json"
      ],
      "instances": []
    },
    "actions": ["remove_clothing.action.json"],
    "events": [
      "clothing_equipped.event.json",
      "clothing_instantiation_completed.event.json",
      "clothing_layer_conflict.event.json",
      "clothing_unequipped.event.json"
    ],
    "rules": ["handle_remove_clothing.rule.json"],
    "conditions": ["event-is-action-remove-clothing.condition.json"],
    "scopes": [
      "target_topmost_torso_lower_clothing.scope",
      "target_topmost_torso_lower_clothing_no_accessories.scope",
      "target_topmost_torso_upper_clothing.scope",
      "topmost_clothing.scope"
    ]
  }
}
