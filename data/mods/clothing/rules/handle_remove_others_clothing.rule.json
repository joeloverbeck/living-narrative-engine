{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_remove_others_clothing",
  "comment": "Handles the 'clothing:remove_others_clothing' action with perspective-aware perception (actor gets first-person, target gets first-person from their perspective).",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "clothing:event-is-action-remove-others-clothing"
  },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "primary",
        "result_variable": "primaryName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "secondary",
        "result_variable": "secondaryName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": {
          "!": {
            "isRemovalBlocked": ["primary", "secondary"]
          }
        },
        "then_actions": [
          {
            "type": "UNEQUIP_CLOTHING",
            "parameters": {
              "entity_ref": "primary",
              "clothing_item_id": "{event.payload.secondaryId}",
              "cascade_unequip": false,
              "destination": "ground"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "primary"
            }
          },
          {
            "type": "SET_VARIABLE",
            "comment": "Prepare observer message (third-person)",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} removes {context.primaryName}'s {context.secondaryName}."
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Remove others clothing action with perspective-aware descriptions",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.logMessage}",
              "actor_description": "I remove {context.primaryName}'s {context.secondaryName}.",
              "target_description": "{context.actorName} removes my {context.secondaryName}.",
              "perception_type": "physical.target_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.primaryId}",
              "alternate_descriptions": {
                "auditory": "I hear the rustling of fabric and sounds of clothing being removed nearby.",
                "tactile": "I feel hands tugging at my clothing."
              },
              "involved_entities": ["{event.payload.secondaryId}"]
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "comment": "Display success message in UI",
            "parameters": {
              "eventType": "core:display_successful_action_result",
              "payload": {
                "message": "{context.logMessage}"
              }
            }
          },
          {
            "type": "END_TURN",
            "comment": "End turn after successful remove",
            "parameters": {
              "entityId": "{event.payload.actorId}",
              "success": true
            }
          }
        ],
        "else_actions": [
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} cannot remove {context.primaryName}'s {context.secondaryName} - it is blocked by other clothing."
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "parameters": {
              "eventType": "core:action_execution_failed",
              "payload": {
                "actorId": "{event.payload.actorId}",
                "actionId": "{event.payload.actionId}",
                "reason": "removal_blocked",
                "message": "{context.logMessage}"
              }
            }
          }
        ]
      }
    }
  ]
}
