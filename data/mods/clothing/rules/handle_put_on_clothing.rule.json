{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_put_on_clothing",
  "comment": "Handles the 'clothing:put_on_clothing' action. Equips the selected clothing item and dispatches descriptive text.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "clothing:event-is-action-put-on-clothing" },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "clothingName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "EQUIP_CLOTHING",
      "parameters": {
        "entity_ref": "actor",
        "clothing_item_id": "{event.payload.targetId}",
        "destination": "inventory",
        "result_variable": "equipSuccess"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.equipSuccess" },
        "then_actions": [
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} puts on {context.clothingName}."
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "physical.target_action"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "locationId",
              "value": "{context.actorPosition.locationId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "targetId",
              "value": "{event.payload.targetId}"
            }
          },
          {
            "macro": "core:logSuccessAndEndTurn"
          }
        ],
        "else_actions": [
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} cannot put on {context.clothingName}."
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "parameters": {
              "eventType": "core:action_execution_failed",
              "payload": {
                "actorId": "{event.payload.actorId}",
                "actionId": "{event.payload.actionId}",
                "reason": "equip_failed",
                "message": "{context.logMessage}"
              }
            }
          }
        ]
      }
    }
  ]
}
