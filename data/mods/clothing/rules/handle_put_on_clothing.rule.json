{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_put_on_clothing",
  "comment": "Handles the 'clothing:put_on_clothing' action with perspective-aware perception (actor gets first-person description).",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "clothing:event-is-action-put-on-clothing" },
  "actions": [
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "actor",
        "result_variable": "actorName"
      }
    },
    {
      "type": "GET_NAME",
      "parameters": {
        "entity_ref": "target",
        "result_variable": "clothingName"
      }
    },
    {
      "type": "QUERY_COMPONENT",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "core:position",
        "result_variable": "actorPosition"
      }
    },
    {
      "type": "EQUIP_CLOTHING",
      "parameters": {
        "entity_ref": "actor",
        "clothing_item_id": "{event.payload.targetId}",
        "destination": "inventory",
        "result_variable": "equipSuccess"
      }
    },
    {
      "type": "IF",
      "parameters": {
        "condition": { "var": "context.equipSuccess" },
        "then_actions": [
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": "actor"
            }
          },
          {
            "type": "SET_VARIABLE",
            "comment": "Prepare observer message (third-person)",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} puts on {context.clothingName}."
            }
          },
          {
            "type": "DISPATCH_PERCEPTIBLE_EVENT",
            "comment": "Put on clothing action with perspective-aware descriptions",
            "parameters": {
              "location_id": "{context.actorPosition.locationId}",
              "description_text": "{context.logMessage}",
              "actor_description": "I put on {context.clothingName}.",
              "perception_type": "physical.self_action",
              "actor_id": "{event.payload.actorId}",
              "target_id": "{event.payload.targetId}",
              "alternate_descriptions": {
                "auditory": "I hear the rustling of fabric as someone dresses nearby."
              }
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "comment": "Display success message in UI",
            "parameters": {
              "eventType": "core:display_successful_action_result",
              "payload": {
                "message": "{context.logMessage}"
              }
            }
          },
          {
            "type": "END_TURN",
            "comment": "End turn after successful put on",
            "parameters": {
              "entityId": "{event.payload.actorId}",
              "success": true
            }
          }
        ],
        "else_actions": [
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} cannot put on {context.clothingName}."
            }
          },
          {
            "type": "DISPATCH_EVENT",
            "parameters": {
              "eventType": "core:action_execution_failed",
              "payload": {
                "actorId": "{event.payload.actorId}",
                "actionId": "{event.payload.actionId}",
                "reason": "equip_failed",
                "message": "{context.logMessage}"
              }
            }
          }
        ]
      }
    }
  ]
}
