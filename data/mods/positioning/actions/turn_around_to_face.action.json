{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "positioning:turn_around_to_face",
  "name": "Turn Around to Face",
  "description": "Turn around to face someone you are currently facing away from.",
  "targets": {
    "primary": {
      "scope": "positioning:actors_im_facing_away_from",
      "placeholder": "target",
      "description": "Actor you are facing away from"
    }
  },
  "required_components": {
    "actor": ["positioning:closeness", "positioning:facing_away"]
  },
  "forbidden_components": {
    "actor": ["positioning:biting_neck"]
  },
  "template": "turn around to face {target}",
  "prerequisites": [],
  "visual": {
    "backgroundColor": "#bf360c",
    "textColor": "#ffffff",
    "hoverBackgroundColor": "#8d2c08",
    "hoverTextColor": "#ffffff"
  }
}
