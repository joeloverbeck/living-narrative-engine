{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "positioning:place_yourself_behind",
  "name": "Place Yourself Behind",
  "description": "Position yourself behind someone, causing them to face away from you.",
  "targets": {
    "primary": {
      "scope": "positioning:actors_in_location_not_facing_away_from_actor",
      "placeholder": "target",
      "description": "Actor to position yourself behind"
    }
  },
  "required_components": {
    "actor": []
  },
  "forbidden_components": {
    "actor": [
      "positioning:sitting_on",
      "positioning:kneeling_before",
      "positioning:lying_down",
      "positioning:straddling_waist"
    ],
    "primary": ["positioning:lying_down"]
  },
  "template": "place yourself behind {target}",
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "core:actor-mouth-available"
      },
      "failure_message": "You cannot do that while your mouth is engaged."
    }
  ],
  "visual": {
    "backgroundColor": "#bf360c",
    "textColor": "#ffffff",
    "hoverBackgroundColor": "#8d2c08",
    "hoverTextColor": "#ffffff"
  }
}
