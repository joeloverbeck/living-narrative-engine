{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_straighten_up",
  "comment": "Handles the 'positioning:straighten_up' action. Removes bending_over component, handles closeness, unlocks movement, dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "positioning:event-is-action-straighten-up" },
  "actions": [
    {
      "type": "QUERY_COMPONENT",
      "comment": "Check if actor is actually bending over",
      "parameters": {
        "entity_ref": "actor",
        "component_type": "positioning:bending_over",
        "result_variable": "bendingOverInfo"
      }
    },
    {
      "type": "IF",
      "comment": "Only proceed if actor is bending over",
      "parameters": {
        "condition": { "!!": [{ "var": "context.bendingOverInfo" }] },
        "then_actions": [
          {
            "type": "GET_NAME",
            "parameters": {
              "entity_ref": "actor",
              "result_variable": "actorName"
            }
          },
          {
            "type": "QUERY_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "core:position",
              "result_variable": "actorPosition"
            }
          },
          {
            "type": "GET_NAME",
            "parameters": {
              "entity_ref": "{context.bendingOverInfo.surface_id}",
              "result_variable": "surfaceName"
            }
          },
          {
            "type": "REMOVE_COMPONENT",
            "parameters": {
              "entity_ref": "actor",
              "component_type": "positioning:bending_over"
            }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": { "entity_ref": "actor" }
          },
          {
            "type": "REGENERATE_DESCRIPTION",
            "parameters": {
              "entity_ref": {
                "entityId": "{context.bendingOverInfo.surface_id}"
              }
            }
          },
          {
            "type": "UNLOCK_MOVEMENT",
            "comment": "Restore movement capability",
            "parameters": {
              "actor_id": "{event.payload.actorId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "{context.actorName} straightens up from {context.surfaceName}."
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "physical.self_action"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "locationId",
              "value": "{context.actorPosition.locationId}"
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "targetId",
              "value": "{context.bendingOverInfo.surface_id}"
            }
          },
          { "macro": "core:logSuccessAndEndTurn" }
        ],
        "else_actions": [
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "logMessage",
              "value": "Actor is not bending over anything."
            }
          },
          {
            "type": "SET_VARIABLE",
            "parameters": {
              "variable_name": "perceptionType",
              "value": "error"
            }
          },
          { "macro": "core:logFailureAndEndTurn" }
        ]
      }
    }
  ]
}
