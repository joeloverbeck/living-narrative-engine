{
  "$schema": "schema://living-narrative-engine/mod-manifest.schema.json",
  "id": "positioning",
  "version": "1.0.0",
  "name": "Positioning System",
  "description": "Provides physical positioning and spatial relationship mechanics for actors, including closeness circles, facing directions, and movement actions.",
  "author": "Living Narrative Engine",
  "gameVersion": ">=0.0.1",
  "dependencies": [
    {
      "id": "core",
      "version": "^1.0.0"
    }
  ],
  "content": {
    "components": [
      "closeness.component.json",
      "facing_away.component.json",
      "kneeling_before.component.json"
    ],
    "actions": [
      "get_close.action.json",
      "kneel_before.action.json",
      "stand_up.action.json",
      "step_back.action.json",
      "turn_around.action.json",
      "turn_around_to_face.action.json"
    ],
    "conditions": [
      "actor-in-entity-facing-away.condition.json",
      "actor-is-behind-entity.condition.json",
      "actor-is-in-closeness.condition.json",
      "both-actors-facing-each-other.condition.json",
      "entity-in-facing-away.condition.json",
      "entity-not-in-facing-away.condition.json",
      "event-is-action-get-close.condition.json",
      "event-is-action-kneel-before.condition.json",
      "event-is-action-stand-up.condition.json",
      "event-is-action-step-back.condition.json",
      "event-is-action-turn-around-to-face.condition.json",
      "event-is-action-turn-around.condition.json"
    ],
    "rules": [
      "get_close.rule.json",
      "kneel_before.rule.json",
      "stand_up.rule.json",
      "step_back.rule.json",
      "turn_around.rule.json",
      "turn_around_to_face.rule.json"
    ],
    "entities": {
      "definitions": [],
      "instances": []
    },
    "events": [
      "actor_faced_everyone.event.json",
      "actor_faced_forward.event.json",
      "actor_turned_around.event.json"
    ],
    "macros": [],
    "scopes": [
      "actors_im_facing_away_from.scope",
      "close_actors.scope",
      "close_actors_facing_each_other_or_behind_target.scope"
    ]
  }
}
