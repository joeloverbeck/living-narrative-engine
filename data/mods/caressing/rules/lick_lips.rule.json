{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_lick_lips",
  "comment": "Handles the 'caressing:lick_lips' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "caressing:event-is-action-lick-lips" },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} leans in and seductively licks {context.targetName}'s lips."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
