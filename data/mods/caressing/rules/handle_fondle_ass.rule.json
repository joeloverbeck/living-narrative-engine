{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_fondle_ass",
  "comment": "Handles the 'caressing:fondle_ass' action with clothing context. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": { "condition_ref": "caressing:event-is-action-fondle-ass" },
  "actions": [
    {
      "type": "PREPARE_ACTION_CONTEXT",
      "parameters": {
        "include_secondary": true,
        "secondary_name_variable": "clothingName"
      }
    },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} eagerly fondles {context.targetName}'s ass over the {context.clothingName}."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
