{
  "$schema": "schema://living-narrative-engine/rule.schema.json",
  "rule_id": "handle_nuzzle_face_into_neck",
  "comment": "Handles the 'caressing:nuzzle_face_into_neck' action. Dispatches descriptive text and ends the turn.",
  "event_type": "core:attempt_action",
  "condition": {
    "condition_ref": "caressing:event-is-action-nuzzle-face-into-neck"
  },
  "actions": [
    { "type": "PREPARE_ACTION_CONTEXT", "parameters": {} },
    {
      "type": "SET_VARIABLE",
      "parameters": {
        "variable_name": "logMessage",
        "value": "{context.actorName} nuzzles their face into {context.targetName}'s neck."
      }
    },
    { "macro": "core:logSuccessAndEndTurn" }
  ]
}
