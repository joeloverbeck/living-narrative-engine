{
  "$schema": "schema://living-narrative-engine/action.schema.json",
  "id": "caressing:adjust_clothing",
  "name": "Adjust Clothing",
  "description": "Smooth their collar or adjust a displaced garment with possessive care.",
  "targets": {
    "primary": {
      "scope": "caressing:close_actors_facing_each_other_with_torso_clothing",
      "placeholder": "primary",
      "description": "Person whose clothing to adjust"
    },
    "secondary": {
      "scope": "clothing:target_topmost_torso_upper_clothing",
      "placeholder": "secondary",
      "description": "Specific garment to adjust",
      "contextFrom": "primary"
    }
  },
  "template": "adjust {primary}'s {secondary}",
  "required_components": {
    "actor": ["personal-space-states:closeness"]
  },
  "forbidden_components": {
    "actor": ["kissing:kissing"]
  },
  "prerequisites": [
    {
      "logic": {
        "condition_ref": "personal-space:actor-is-in-closeness"
      },
      "failure_message": "You can only do that with the person you are currently close to."
    }
  ],
  "visual": {
    "backgroundColor": "#311b92",
    "textColor": "#d1c4e9",
    "hoverBackgroundColor": "#4527a0",
    "hoverTextColor": "#ede7f6"
  }
}
