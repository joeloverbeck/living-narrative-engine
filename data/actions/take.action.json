{
  "$schema": "../schemas/action-definition.schema.json",
  "id": "action:take",
  "commandVerb": "take",
  "name": "Take",
  "target_domain": "environment",
  "prerequisites": [
    {
      "!!": {
        "var": "target.components.component:item"
      }
    }
  ],
  "template": "take {target}",
  "dispatch_event": {
    "eventName": "event:item_picked_up",
    "payload": {
      "pickerId": "actor.id",
      "itemId": "target.id",
      "locationId": "context.currentLocation.id"
    }
  }
}
