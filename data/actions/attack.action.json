{
  "$schema": "../schemas/action-definition.schema.json",
  "id": "action:attack",
  "commandVerb": "attack",
  "name": "Attack",
  "target_domain": "environment",
  "prerequisites": [
    {
      "!!": {
        "var": "target.components.component:health"
      }
    }
  ],
  "template": "attack {target}",
  "dispatch_event": {
    "eventName": "event:attack_intended",
    "payload": {
      "attackerId": "actor.id",
      "targetId": "target.id"
    }
  }
}