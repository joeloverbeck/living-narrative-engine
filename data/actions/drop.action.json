{
  "$schema": "../schemas/action-definition.schema.json",
  "id": "action:drop",
  "commandVerb": "drop",
  "name": "Drop",
  "target_domain": "inventory",
  "prerequisites": [
    {
      "and": [
        {
          "!!": {
            "var": "actor.components.component:inventory"
          }
        },
        {
          "!!": {
            "var": "target.components.component:item"
          }
        }
      ]
    }
  ],
  "template": "drop {target}",
  "dispatch_event": {
    "eventName": "event:item_drop_attempted",
    "payload": {
      "playerId": "actor.id",
      "itemInstanceId": "target.id",
      "locationId": "context.currentLocation.id"
    }
  }
}