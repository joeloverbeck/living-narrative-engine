{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/actionTraceConfig.schema.json",
  "title": "Action Trace Configuration Schema",
  "description": "Defines the structure for action tracing configuration within the trace-config.json file",
  "type": "object",
  "properties": {
    "actionTracing": {
      "type": "object",
      "description": "Configuration for action tracing system",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable action tracing globally",
          "default": false
        },
        "tracedActions": {
          "type": "array",
          "description": "Action IDs to trace. Supports wildcards: '*', 'mod:*'",
          "items": {
            "type": "string",
            "pattern": "^([a-z_]+:[a-z_]+|\\*|[a-z_]+:\\*)$"
          },
          "default": []
        },
        "outputDirectory": {
          "type": "string",
          "description": "Directory for trace output files",
          "default": "./traces/actions"
        },
        "verbosity": {
          "type": "string",
          "enum": ["minimal", "standard", "detailed", "verbose"],
          "description": "Level of detail in traces",
          "default": "standard"
        },
        "includeComponentData": {
          "type": "boolean",
          "description": "Include component data in traces",
          "default": true
        },
        "includePrerequisites": {
          "type": "boolean",
          "description": "Include prerequisite evaluation details",
          "default": true
        },
        "includeTargets": {
          "type": "boolean",
          "description": "Include target resolution details",
          "default": true
        },
        "maxTraceFiles": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum number of trace files to keep",
          "default": 100
        },
        "rotationPolicy": {
          "type": "string",
          "enum": ["age", "count"],
          "description": "How to rotate old trace files",
          "default": "age"
        },
        "maxFileAge": {
          "type": "integer",
          "minimum": 3600,
          "description": "Maximum age of trace files in seconds (when using age policy)",
          "default": 86400
        },
        "outputFormats": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["json", "text"]
          },
          "default": ["json"],
          "description": "Formats to generate for trace output. Only JSON and text formats are supported."
        },
        "textFormatOptions": {
          "type": "object",
          "properties": {
            "enableColors": {
              "type": "boolean",
              "default": false,
              "description": "Enable ANSI color codes in text output"
            },
            "lineWidth": {
              "type": "integer",
              "minimum": 80,
              "maximum": 200,
              "default": 120,
              "description": "Maximum line width for text formatting"
            },
            "indentSize": {
              "type": "integer",
              "minimum": 0,
              "maximum": 8,
              "default": 2,
              "description": "Number of spaces for indentation"
            },
            "sectionSeparator": {
              "type": "string",
              "maxLength": 1,
              "default": "=",
              "description": "Character used for section separators"
            },
            "includeTimestamps": {
              "type": "boolean",
              "default": true,
              "description": "Include timing information in output"
            },
            "performanceSummary": {
              "type": "boolean",
              "default": true,
              "description": "Add performance summary section at the end"
            }
          },
          "description": "Options for text format output",
          "additionalProperties": false
        }
      },
      "required": ["enabled", "tracedActions", "outputDirectory"],
      "additionalProperties": false
    }
  },
  "required": ["actionTracing"]
}
