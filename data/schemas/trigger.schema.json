{
  "$id": "http://example.com/schemas/trigger.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event Trigger v2",
  "description": "Links an inâ€‘game event to a sequence of EffectObjects.",
  "type": "object",
  "required": [
    "id",
    "listen_to",
    "effects"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "common.schema.json#/definitions/namespacedId"
    },
    "listen_to": {
      "type": "object",
      "required": [
        "event_type"
      ],
      "additionalProperties": false,
      "properties": {
        "event_type": {
          "type": "string"
        },
        "filters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "effects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "effect.schema.json#/definitions/EffectObject"
      }
    },
    "one_shot": {
      "type": "boolean",
      "default": true
    },
    "enabled": {
      "type": "boolean",
      "default": true
    }
  }
}