{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/schemas/effect.schema.json",
  "title": "EffectObject",
  "description": "A single effect that fires an inâ€‘game event. Used by items, triggers, etc.",
  "definitions": {
    "EffectObject": {
      "allOf": [
        {
          "$ref": "common.schema.json#/definitions/TypedParameterBase"
        }
      ],
      "properties": {
        "type": {
          "description": "The type of effect. Currently only 'trigger_event' is supported.",
          "enum": [
            "trigger_event"
          ],
          "const": "trigger_event"
        }
      },
      "oneOf": [
        {
          "properties": {
            "type": {
              "const": "trigger_event"
            },
            "parameters": {
              "type": "object",
              "required": [
                "eventName"
              ],
              "properties": {
                "eventName": {
                  "$ref": "common.schema.json#/definitions/namespacedId"
                },
                "payload": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "additionalProperties": false
            }
          }
        }
      ],
      "examples": [
        {
          "type": "trigger_event",
          "parameters": {
            "eventName": "event:apply_heal_requested",
            "payload": {
              "amount": 10
            }
          }
        }
      ]
    }
  },
  "$ref": "#/definitions/EffectObject"
}