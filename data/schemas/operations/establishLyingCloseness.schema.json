{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/establishLyingCloseness.schema.json",
  "title": "ESTABLISH_LYING_CLOSENESS Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "ESTABLISH_LYING_CLOSENESS"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for establishing closeness between all actors lying on the same furniture",
      "properties": {
        "furniture_id": {
          "description": "The furniture entity where lying occurred",
          "type": "string",
          "minLength": 1
        },
        "actor_id": {
          "description": "The actor who just lay down and may establish closeness",
          "type": "string",
          "minLength": 1
        },
        "result_variable": {
          "description": "Optional variable name to store operation result for rule conditions",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["furniture_id", "actor_id"],
      "additionalProperties": false
    }
  }
}
