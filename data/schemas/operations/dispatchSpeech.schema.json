        "entity_id": {
          "type": "string",
          "minLength": 1
        },
        "speech_content": {
          "type": "string",
          "minLength": 1
        },
        "thoughts": {
          "type": "string",
          "minLength": 1
        },
        "notes": {
          "type": "string",
          "minLength": 1
        },
        "allow_html": {
          "type": "boolean"
        }
