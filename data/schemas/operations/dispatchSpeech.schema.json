{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/schemas/operations/dispatchSpeech.schema.json",
  "title": "DISPATCH_SPEECH Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "DISPATCH_SPEECH"
