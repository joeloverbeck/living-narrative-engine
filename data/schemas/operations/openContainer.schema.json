{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/openContainer.schema.json",
  "title": "OPEN_CONTAINER Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "OPEN_CONTAINER"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for the OPEN_CONTAINER operation. Opens a container and optionally stores the result in a context variable.",
      "properties": {
        "actorEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the actor attempting to open the container"
        },
        "containerEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the container being opened"
        },
        "result_variable": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Optional context variable to receive the operation result"
        }
      },
      "required": ["actorEntity", "containerEntity"],
      "additionalProperties": false
    }
  }
}
