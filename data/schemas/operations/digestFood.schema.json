{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/digestFood.schema.json",
  "title": "DIGEST_FOOD Operation",
  "description": "Converts stomach buffer content to energy reserve based on conversion rate and efficiency",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "DIGEST_FOOD"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "properties": {
        "entity_ref": {
          "description": "Reference to the entity with fuel_converter and metabolic_store components",
          "oneOf": [{ "type": "string" }, { "type": "object" }]
        },
        "turns": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of turns to process digestion for (default: 1)"
        }
      },
      "required": ["entity_ref"],
      "additionalProperties": false
    }
  }
}
