{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/burnEnergy.schema.json",
  "title": "BURN_ENERGY Operation",
  "description": "Burns energy from an entity's metabolic store based on base burn rate and activity multiplier",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "BURN_ENERGY"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "properties": {
        "entity_ref": {
          "description": "Reference to the entity with metabolic_store component",
          "oneOf": [{ "type": "string" }, { "type": "object" }]
        },
        "activity_multiplier": {
          "type": "number",
          "minimum": 0,
          "default": 1.0,
          "description": "Multiplier for the base burn rate (default: 1.0)"
        },
        "turns": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of turns to calculate energy burn for (default: 1)"
        }
      },
      "required": ["entity_ref"],
      "additionalProperties": false
    }
  }
}
