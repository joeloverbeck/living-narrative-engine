{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/dropItemAtLocation.schema.json",
  "title": "DROP_ITEM_AT_LOCATION Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "DROP_ITEM_AT_LOCATION"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for the DROP_ITEM_AT_LOCATION operation. Drops an item from an actor's inventory at a specified location.",
      "properties": {
        "actorEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the actor dropping the item"
        },
        "itemEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the item being dropped"
        },
        "locationId": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Location ID where the item will be dropped"
        }
      },
      "required": ["actorEntity", "itemEntity", "locationId"],
      "additionalProperties": false
    }
  }
}
