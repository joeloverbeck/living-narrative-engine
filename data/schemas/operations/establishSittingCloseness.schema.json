{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/establishSittingCloseness.schema.json",
  "title": "ESTABLISH_SITTING_CLOSENESS Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "ESTABLISH_SITTING_CLOSENESS"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for establishing closeness between actors sitting adjacently",
      "properties": {
        "furniture_id": {
          "description": "The furniture entity where sitting occurred",
          "type": "string",
          "minLength": 1
        },
        "actor_id": {
          "description": "The actor who just sat down and may establish closeness",
          "type": "string",
          "minLength": 1
        },
        "spot_index": {
          "description": "The spot index where the actor is now sitting",
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 9
            },
            {
              "type": "string",
              "description": "Variable reference (e.g., '{context.spotIndex}')",
              "minLength": 1
            }
          ]
        },
        "result_variable": {
          "description": "Optional variable name to store operation result for rule conditions",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["furniture_id", "actor_id", "spot_index"],
      "additionalProperties": false
    }
  }
}