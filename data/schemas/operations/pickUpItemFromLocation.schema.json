{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/pickUpItemFromLocation.schema.json",
  "title": "PICK_UP_ITEM_FROM_LOCATION Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "PICK_UP_ITEM_FROM_LOCATION"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for the PICK_UP_ITEM_FROM_LOCATION operation. Picks up an item from a location and adds it to actor's inventory.",
      "properties": {
        "actorEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the actor picking up the item"
        },
        "itemEntity": {
          "type": "string",
          "minLength": 1,
          "pattern": "^\\S(.*\\S)?$",
          "description": "Entity ID of the item being picked up"
        }
      },
      "required": ["actorEntity", "itemEntity"],
      "additionalProperties": false
    }
  }
}
