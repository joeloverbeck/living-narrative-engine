{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema://living-narrative-engine/operations/removeSittingCloseness.schema.json",
  "title": "REMOVE_SITTING_CLOSENESS Operation",
  "allOf": [
    {
      "$ref": "../base-operation.schema.json"
    },
    {
      "properties": {
        "type": {
          "const": "REMOVE_SITTING_CLOSENESS"
        },
        "parameters": {
          "$ref": "#/$defs/Parameters"
        }
      }
    }
  ],
  "$defs": {
    "Parameters": {
      "type": "object",
      "description": "Parameters for removing closeness when actors no longer sit adjacently",
      "properties": {
        "furniture_id": {
          "description": "The furniture entity where the actor was sitting",
          "type": "string",
          "minLength": 1
        },
        "actor_id": {
          "description": "The actor who stood up and may lose closeness relationships",
          "type": "string",
          "minLength": 1
        },
        "spot_index": {
          "description": "The spot index where the actor was previously sitting",
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        },
        "result_variable": {
          "description": "Optional variable name to store operation result for rule conditions",
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["furniture_id", "actor_id", "spot_index"],
      "additionalProperties": false
    }
  }
}