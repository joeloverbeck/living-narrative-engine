{
  "id": "demo:trigger_unlock_treasure_door_on_goblin_death",
  "listen_to": {
    "event_type": "event:entity_died",
    "filters": {
      "source_id": "demo:enemy_goblin"
    }
  },
  "actions": [
    {
      "type": "update_entity_component",
      "target": {
        "entity_id": "demo:door_treasure_room"
      },
      "parameters": {
        "component_name": "Lockable",
        "component_data": {
          "isLocked": false
        }
      }
    }
  ],
  "one_shot": true
}
